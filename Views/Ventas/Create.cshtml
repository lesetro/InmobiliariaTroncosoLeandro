                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar con resumen -->
        <div class="col-md-4">
            <!-- Resumen financiero -->
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>Resumen Financiero
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Precio Total:</small>
