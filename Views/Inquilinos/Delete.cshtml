@model Inmobiliaria_troncoso_leandro.Models.Inquilino
@{
    ViewData["Title"] = "Desactivar Inquilino";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow border-warning">
            <div class="card-header bg-warning text-dark">
                <h3 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i>
                    Desactivar Inquilino
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Atención:</strong> Estás por desactivar este inquilino. 
                    El registro se mantendrá en el sistema pero estará marcado como inactivo.
                    Puedes reactivarlo posteriormente editando el inquilino y cambiando su estado.
                </div>

                <h4 class="mb-3">Detalles del Inquilino:</h4>
                
                <dl class="row">
                    <dt class="col-sm-3">Código:</dt>
                    <dd class="col-sm-9"><span class="badge bg-secondary">#@Model.IdInquilino</span></dd>

                    <dt class="col-sm-3">Nombre Completo:</dt>
                    <dd class="col-sm-9"><strong>@Model.Usuario?.Apellido, @Model.Usuario?.Nombre</strong></dd>

                    <dt class="col-sm-3">DNI:</dt>
                    <dd class="col-sm-9">@(Model.Usuario?.Dni ?? "N/A")</dd>

                    <dt class="col-sm-3">Teléfono:</dt>
                    <dd class="col-sm-9">@(Model.Usuario?.Telefono ?? "N/A")</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@(Model.Usuario?.Email ?? "N/A")</dd>

                    <dt class="col-sm-3">Dirección:</dt>
                    <dd class="col-sm-9">@(Model.Usuario?.Direccion ?? "N/A")</dd>

                    <dt class="col-sm-3">Estado Actual:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Activo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle"></i> Inactivo
                            </span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdInquilino" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-pause-circle"></i> Desactivar Inquilino
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>