<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Espacio CIMA</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Client Dashboard Styles -->
    <style>
        body {
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fc;
        }
        .sidebar {
            min-height: 100vh;
            max-height: 100vh;
            /* COLOR POR ROL */
            @if (User.IsInRole("propietario"))
            {
                <text>background: linear-gradient(180deg, #1cc88a 10%, #13855c 100%);</text>
            }
            else if (User.IsInRole("inquilino"))
            {
                <text>background: linear-gradient(180deg, #36b9cc 10%, #258391 100%);</text>
            }
            else
            {
                <text>background: linear-gradient(180deg, #6a4a8c 10%, #4e3670 100%);</text>
            }
            width: 280px; /* Aumentado el ancho */
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
            overflow-x: hidden;
            padding-bottom: 2rem;
            /* NUEVO: Separación del contenido */
            box-shadow: 3px 0 15px rgba(0, 0, 0, 0.1);
            border-right: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 1rem 1.5rem;
            border-radius: 0;
            margin: 0 0.5rem; /* NUEVO: Margen lateral interno */
            width: calc(100% - 1rem); /* NUEVO: Ajustar ancho */
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.15);
            transform: translateX(5px); /* NUEVO: Efecto hover */
            border-radius: 8px; /* NUEVO: Bordes redondeados en hover */
        }
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.25);
            border-radius: 8px; /* NUEVO: Bordes redondeados */
            margin: 0 0.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }
        .content-wrapper {
            margin-left: 280px; /* Ajustado al nuevo ancho */
            min-height: 100vh;
            background-color: #f8f9fc;
        }
        .topbar {
            height: 4.375rem;
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
            margin-left: 280px; /* Ajustado */
            width: calc(100% - 280px); /* Ajustado */
            position: fixed;
            top: 0;
            z-index: 999;
        }
        .sidebar-brand {
            height: 4.375rem;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 800;
            padding: 1.5rem 1rem;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.1);
            color: #fff;
            flex-shrink: 0;
            margin: 0 0.5rem 0.5rem 0.5rem; /* NUEVO: Margen lateral */
            border-radius: 0 0 12px 12px; /* NUEVO: Bordes redondeados abajo */
        }
        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            margin: 1rem 0.5rem; /* NUEVO: Margen lateral */
        }
        .sidebar-heading {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            padding: 1.5rem 1.5rem 0.5rem;
            margin: 0 0.5rem; /* NUEVO: Margen lateral */
        }
        .main-content {
            padding: 2rem; /* Aumentado padding */
            margin-top: 4.375rem; /* Para compensar el topbar fijo */
        }
        
        /* NUEVO: Estilo para los items de navegación */
        .nav-item {
            margin-bottom: 0.25rem;
        }
        
        /* NUEVO: Scrollbar personalizado */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }
        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }
        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }
        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.5);
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
                max-height: none;
                width: 280px;
            }
            .content-wrapper {
                margin-left: 0;
            }
            .topbar {
                margin-left: 0;
                width: 100%;
            }
            .sidebar.show {
                margin-left: 0;
            }
        }

        /* Badges para estados */
        .badge-vigente { background-color: #1cc88a; }
        .badge-proximo { background-color: #f6c23e; }
        .badge-vencido { background-color: #e74a3b; }
        .badge-disponible { background-color: #1cc88a; }
        .badge-alquilado { background-color: #4e73df; }
        .badge-vendido { background-color: #6f42c1; }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="accordionSidebar">
        <!-- Sidebar Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" 
           asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" 
           asp-action="Index">
            <div class="sidebar-brand-icon">
                <i class="bi bi-house-door"></i>
            </div>
            <div class="sidebar-brand-text mx-3">
                @if (User.IsInRole("propietario"))
                {
                    <text>Mi Espacio Propietario</text>
                }
                else if (User.IsInRole("inquilino"))
                {
                    <text>Mi Espacio Inquilino</text>
                }
                else
                {
                    <text>Mi Espacio</text>
                }
            </div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Dashboard -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Volver al inicio</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- SECCIÓN ESPECÍFICA PARA PROPIETARIOS -->
        @if (User.IsInRole("propietario"))
        {
            <div class="sidebar-heading">Mis Propiedades</div>

            <!-- Mis Inmuebles -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisInmuebles">
                    <i class="bi bi-building"></i>
                    <span>Mis Propiedades</span>
                </a>
            </li>

            <!-- Agregar Inmueble -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="CrearInmueble">
                    <i class="bi bi-plus-circle"></i>
                    <span>Agregar Propiedad</span>
                </a>
            </li>

            <!-- Mis Contratos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisContratos">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Mis Contratos</span>
                </a>
            </li>

            <!-- Mis Pagos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisPagos">
                    <i class="bi bi-currency-dollar"></i>
                    <span>Mis Ingresos</span>
                </a>
            </li>
        }

        <!-- SECCIÓN ESPECÍFICA PARA INQUILINOS -->
        @if (User.IsInRole("inquilino"))
        {
            <div class="sidebar-heading">Mi Alquiler</div>

           @*  <!-- Mi Contrato -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MiContrato">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Mi Contrato</span>
                </a>
            </li> *@

            <!-- Mi Inmueble -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="MiInmueble">
                    <i class="bi bi-house-door"></i>
                    <span>Mi Vivienda</span>
                </a>
            </li>

            <!-- Mis Pagos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="MisPagos">
                    <i class="bi bi-currency-dollar"></i>
                    <span>Mis Pagos</span>
                </a>
            </li>

            <!-- Reportar Problema -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="ReportarProblema">
                    <i class="bi bi-tools"></i>
                    <span>Reportar Problema</span>
                </a>
            </li>
        }

        <!-- SECCIÓN COMPARTIDA -->
        <hr class="sidebar-divider">

        <div class="sidebar-heading">Mi Cuenta</div>

        <!-- Mi Perfil -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" asp-action="MiPerfil">
                <i class="bi bi-person"></i>
                <span>Mi Perfil</span>
            </a>
        </li>

        <!-- Editar Perfil -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" asp-action="EditarPerfil">
                <i class="bi bi-pencil-square"></i>
                <span>Editar Perfil</span>
            </a>
        </li>

        <!-- Contacto -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Contacto">
                <i class="bi bi-telephone"></i>
                <span>Contactar Soporte</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">
    </nav>

    <!-- Topbar -->
    <nav class="topbar navbar navbar-expand navbar-light">
        <div class="container-fluid">
            <button class="btn btn-link d-md-none rounded-circle mr-3" id="sidebarToggleTop">
                <i class="bi bi-list"></i>
            </button>
            
            <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <h4 class="mb-0 text-gray-800">@ViewData["Title"]</h4>
            </div>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" 
                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                            @User.FindFirst("FullName")?.Value
                        </span>
                        <img class="img-profile rounded-circle" src="https://via.placeholder.com/40" alt="Avatar" width="32" height="32">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" 
                         aria-labelledby="userDropdown">
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                            <i class="bi bi-person fa-sm fa-fw mr-2 text-gray-400"></i>
                            Perfil
                        </a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                            <i class="bi bi-key fa-sm fa-fw mr-2 text-gray-400"></i>
                            Cambiar Contraseña
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right fa-sm fa-fw mr-2 text-gray-400"></i>
                                Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="content-wrapper">
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        // Toggle sidebar en móviles
        $("#sidebarToggleTop").click(function() {
            $("#accordionSidebar").toggleClass("show");
        });

        $(document).click(function(e) {
            if (!$(e.target).closest('#accordionSidebar, #sidebarToggleTop').length) {
                $("#accordionSidebar").removeClass("show");
            }
        });

        // Marcar enlace activo
        $(document).ready(function() {
            var currentPath = window.location.pathname;
            $('.sidebar .nav-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>