    <!-- Scripts globales para páginas públicas -->
    <script>
        $(document).ready(function() {
            // Navbar transparente/sólida al hacer scroll
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar-public').addClass('scrolled');
                } else {
                    $('.navbar-public').removeClass('scrolled');
                }
            });

            // Smooth scrolling para enlaces ancla
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').animate({
                        scrollTop: target.offset().top - 70
                    }, 1000);
                }
            });

            // Botón scroll to top
            $(window).scroll(function() {
                if ($(this).scrollTop() > 100) {
                    $('.scroll-top').fadeIn();
                } else {
                    $('.scroll-top').fadeOut();
                }
            });

            $('.scroll-top a').click(function(e) {
                e.preventDefault();
                $('html, body').animate({scrollTop: 0}, 800);
            });

            // Mostrar/ocultar WhatsApp según scroll
            let lastScrollTop = 0;
            $(window).scroll(function() {
                let scrollTop = $(this).scrollTop();
                if (scrollTop > lastScrollTop && scrollTop > 200) {
                    $('.whatsapp-float').addClass('hidden');
                } else {
                    $('.whatsapp-float').removeClass('hidden');
                }
                lastScrollTop = scrollTop;
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>