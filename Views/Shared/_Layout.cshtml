<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria CIMA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" /> <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!--  CSS personalizado -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                
                <a class="navbar-brand" href="#">CIMA Inmobiliaria</a> 
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Propietarios" asp-action="Index"><i class="bi bi-person-badge"></i> Propietarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Inquilinos" asp-action="Index"><i class="bi bi-people"></i> Inquilinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Inmuebles" asp-action="Index"><i class="bi bi-building"></i> Inmuebles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TipoInmueble" asp-action="Index"><i class="bi bi-tags"></i> Tipo Inmueble</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contratos" asp-action="Index"><i class="bi bi-file-earmark-text"></i> Contratos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pago" asp-action="Index"><i class="bi bi-currency-dollar"></i> Pagos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-lock"></i> Privacy</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="background-image-container" class="background-image" style="background-image: url('image/clave-de-mano.png');">
        <h1 class="d-inline-flex align-items-center">
        <i class="bi-building" style="font-size: 2rem;"></i>
            CIMA Inmobiliaria
        </h1>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody() <!-- Renderiza el contenido de la vista específica aquí -->
            </main>
        </div>

        <footer class="footer text-muted bg-gray">
            <div class="container">
                <p>
                    Contáctenos: 
                    <a href="https://wa.me/1234567890" target="_blank" class="text-decoration-none me-2">
                        <i class="bi bi-whatsapp"></i> (123) 456-7890</a> | 
                    <a href="https://instagram.com/cima_inmobiliaria" target="_blank" class="text-decoration-none me-2">
                        <i class="bi bi-instagram"></i> Instagram</a> | 
                    <a href="mailto:info@CIMA.com" class="text-decoration-none me-2">
                        <i class="bi bi-envelope"></i> info@CIMA.com
                    </a></Strong>
                        <Strong>
                            Horarios: Lunes a Viernes de 9 a 14 | 
                            Calle Belgrano, Villa Mercedes | 
                            Martillero:Juan Pérez - Matrícula: 12345
                        </strong> 
                </p>
            </div>
        </footer>

    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>