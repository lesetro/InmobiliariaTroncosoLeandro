<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria CIMA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">CIMA Inmobiliaria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- NAVEGACIÓN PÚBLICA -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>
                        
                        <!-- ÁREA PARA USUARIOS AUTENTICADOS -->
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <!-- DASHBOARD SEGÚN ROL -->
                            @if (User.IsInRole("administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Panel Administrador
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-briefcase"></i> Panel de Control
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("propietario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="PropietariosArea" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Panel de Control
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("inquilino"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="InquilinosArea" asp-action="Index">
                                        <i class="bi bi-people"></i> Panel de Control
                                    </a>
                                </li>
                            }

                            <!-- MENÚS ESPECÍFICOS POR ROL -->
                            @if (User.IsInRole("administrador") || User.IsInRole("empleado"))
                            {
                                <!-- MENÚ COMPLETO PARA ADMIN/EMPLEADOS -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear"></i> Gestión
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Propietarios" asp-action="Index">Propietarios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a></li>
                                        <li><a class="dropdown-item" asp-controller="TipoInmuebles" asp-action="Index">Tipos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Contratos" asp-action="Index">Contratos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Pagos" asp-action="Index">Pagos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Alquileres" asp-action="Index">Alquileres</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- ÁREA DE CONTACTO PARA TODOS -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="InteresInmueble" asp-action="Index">
                                    <i class="bi bi-envelope"></i> Personas Interesadas
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- MENÚ PARA NO AUTENTICADOS -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Servicios">
                                    <i class="bi bi-building"></i> Servicios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contacto">
                                    <i class="bi bi-envelope"></i> Contacto
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- ÁREA DE USUARIO (LOGIN/LOGOUT) -->
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated  == null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User?.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">Mi Perfil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                    
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                            </a>
                                        </li>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" style="animation: reverse;" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right border-primary"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="background-image-container" class="background-image" style="background-image: url('image/clave-de-mano.png');">
        @if (User?.Identity?.IsAuthenticated == null)
        {
            <!-- BREADCRUMB PARA USUARIOS AUTENTICADOS -->
            <div class="container mt-2">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>


                        <!-- agregar más breadcrumbs dinámicamente -->
                    </ol>
                </nav>
            </div>
        }
        else
        {
            <!-- HEADER PARA VISITANTES -->
            <h1 class="d-inline-flex align-items-center">
                <i class="bi-building" style="font-size: 2rem;"></i>
                CIMA Inmobiliaria
            </h1>
        }

        <div class="container">
            <!-- MENSAJES DE NOTIFICACIÓN -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <main role="main" class="pb-3">
                @RenderBody()
            </main>

        </div>

        <footer class="footer text-muted bg-gray">
            <div class="container">
                <p>
                    Contáctenos: 
                    <a href="https://wa.me/1234567890" target="_blank" class="text-decoration-none me-2">
                        <i class="bi bi-whatsapp"></i> 2657648785</a> | 
                    <a href="https://instagram.com/cima_inmobiliaria" target="_blank" class="text-decoration-none me-2">
                        <i class="bi bi-instagram"></i> Instagram</a> | 
                    <a href="mailto:info@CIMA.com" class="text-decoration-none me-2">
                        <i class="bi bi-envelope"></i> info@CIMA.com
                    </a>
                    <strong>
                        Horarios: Lunes a Viernes de 9 a 14 | 
                        Calle Belgrano, Villa Mercedes | 
                        Martillero: Juan Pérez - Matrícula: 12345
                    </strong> 
                </p>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>