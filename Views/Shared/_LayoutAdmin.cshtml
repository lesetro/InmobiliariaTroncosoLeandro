<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administración CIMA</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Admin Dashboard Styles -->
    <style>
        body {
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fc;
        }
        .sidebar {
            min-height: 100vh;
            max-height: 100vh;
            /* CONDICIONAL PARA EL COLOR DEL SIDEBAR */
            @if (User.IsInRole("administrador"))
            {
                <text>background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);</text>
            }
            else if (User.IsInRole("empleado"))
            {
                <text>background: linear-gradient(180deg, #8B5FBF 10%, #6A4A8C 100%);</text>
            }
            else
            {
                <text>background: linear-gradient(180deg, #8B5FBF 10%, #6A4A8C 100%);</text>
            }
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
            overflow-x: hidden;
            padding-bottom: 2rem;
        }
        
        /* Personalizar scrollbar del sidebar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }
        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }
        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }
        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.5);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 1rem 1.5rem;
            border-radius: 0;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.2);
        }
        .content-wrapper {
            margin-left: 250px;
            min-height: 100vh;
        }
        .topbar {
            height: 4.375rem;
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
        }
        .sidebar-brand {
            height: 4.375rem;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 800;
            padding: 1.5rem 1rem;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.1);
            color: #fff;
            flex-shrink: 0;
        }
        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            margin: 0 1rem;
        }
        .sidebar-heading {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            padding: 1.5rem 1.5rem 0.5rem;
        }
        .main-content {
            padding: 1.5rem;
        }
        
        /* Estilos para los elementos colapsables */
        .collapse-item {
            display: block;
            padding: 0.5rem 1.5rem 0.5rem 3rem;
            text-decoration: none;
            color: #3a3b45;
            font-size: 0.85rem;
        }
        .collapse-item:hover {
            color: #5a5c69;
            background-color: #f8f9fc;
            text-decoration: none;
        }
        
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -250px;
                max-height: none;
            }
            .content-wrapper {
                margin-left: 0;
            }
            .sidebar.show {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="accordionSidebar">
        <!-- Sidebar Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Admin" asp-action="Index">
            <div class="sidebar-brand-icon">
                <i class="bi bi-building"></i>
            </div>
            <div class="sidebar-brand-text mx-3">
                @if (User.IsInRole("administrador"))
                {
                    <text>CIMA Administrador</text>
                }
                else if (User.IsInRole("empleado"))
                {
                    <text>CIMA Empleado</text>
                }
                else
                {
                    <text>CIMA</text>
                }
            </div>
        </a>

        <!-- Resto del sidebar... -->
        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Dashboard -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Panel Principal</span>
            </a>
        </li>

        <!-- Aquí puedes poner condicionales para mostrar/ocultar secciones según el rol -->
        @if (User.IsInRole("administrador"))
        {
            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">Gestión de Usuarios</div>

            <!-- Usuarios -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseUsuarios">
                    <i class="bi bi-people"></i>
                    <span>Usuarios</span>
                </a>
                <div id="collapseUsuarios" class="collapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="Usuario" asp-action="Index">Ver Todos</a>
                        <a class="collapse-item" asp-controller="Usuario" asp-action="Create">Crear Usuario</a>
                        <a class="collapse-item" asp-controller="Usuario" asp-action="Estadisticas">Estadísticas</a>
                    </div>
                </div>
            </li>
        }

        <!-- Propietarios -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Propietarios" asp-action="Index">
                <i class="bi bi-person-badge"></i>
                <span>Propietarios</span>
            </a>
        </li>

        <!-- Inquilinos -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">
                <i class="bi bi-people-fill"></i>
                <span>Inquilinos</span>
            </a>
        </li>

        <!-- Resto del código del sidebar... -->
        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Heading -->
        <div class="sidebar-heading">Gestión Inmobiliaria</div>

        <!-- Inmuebles -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseInmuebles">
                <i class="bi bi-building"></i>
                <span>Inmuebles</span>
            </a>
            <div id="collapseInmuebles" class="collapse">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" asp-controller="Inmuebles" asp-action="Index">Ver Todos</a>
                    
                        <a class="collapse-item" asp-controller="Inmuebles" asp-action="Create">Agregar Inmueble</a>
                    
                    <a class="collapse-item" asp-controller="TipoInmuebles" asp-action="Index">Tipos de Inmuebles</a>
                </div>
            </div>
        </li>

        <!-- Contratos -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseContratos">
                <i class="bi bi-file-earmark-text"></i>
                <span>Contratos</span>
            </a>
            <div id="collapseContratos" class="collapse">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" asp-controller="Contratos" asp-action="Index">Ver Contratos</a>
                    
                        <a class="collapse-item" asp-controller="Contratos" asp-action="Create">Contrato Alquileres</a>
                        <a class="collapse-item" asp-controller="ContratoVenta" asp-action="Create">Contratos Ventas</a>
                    
                </div>
            </div>
        </li>

        <!-- Pagos -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Pagos" asp-action="Index">
                <i class="bi bi-currency-dollar"></i>
                <span>Pagos</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Heading -->
        <div class="sidebar-heading">Comunicación</div>

        <!-- Intereses -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="InteresInmueble" asp-action="Index">
                <i class="bi bi-envelope-heart"></i>
                <span>Personas Interesadas</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

       
        @if (User.IsInRole("administrador"))
        {
            <!-- Heading -->
            <div class="sidebar-heading">Sistema</div>

            <!-- Sistema -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseSistema" aria-expanded="false">
                    <i class="bi bi-cpu"></i>
                    <span>Sistema</span>
                </a>
                <div id="collapseSistema" class="collapse" data-bs-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="Admin" asp-action="SistemaInfo">
                            <i class="bi bi-info-circle me-2"></i>Información Sistema
                        </a>
                        <a class="collapse-item" asp-controller="Admin" asp-action="Alertas">
                            <i class="bi bi-exclamation-triangle me-2"></i>Alertas
                        </a>
                        <a class="collapse-item" asp-controller="Admin" asp-action="Metricas">
                            <i class="bi bi-graph-up me-2"></i>Métricas
                        </a>
                        <a class="collapse-item" asp-controller="Admin" asp-action="Reportes">
                            <i class="bi bi-file-bar-graph me-2"></i>Reportes
                        </a>
                    </div>
                </div>
            </li>
        }

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">
    </nav>


    <div class="content-wrapper">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light topbar mb-4 static-top shadow">
                <div class="container-fluid">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle me-3">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Buscador -->
                    <div class="d-flex flex-grow-1">
                        <div class="d-none d-sm-flex form-inline mw-100 navbar-search me-auto position-relative">
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control bg-light border-0 small" 
                                       placeholder="Buscar usuarios, inmuebles, contratos..." 
                                       aria-label="Search" 
                                       id="globalSearchInput"
                                       autocomplete="off">
                            </div>
                            
                            <!-- Dropdown de resultados -->
                            <div class="dropdown-menu shadow-lg" 
                                 id="searchResultsDropdown" 
                                 style="display: none; position: absolute; top: 100%; left: 0; right: 0; z-index: 1050; max-height: 350px; overflow-y: auto; min-width: 400px;">
                                <div id="searchResultsContainer">
                                    <!-- Aquí se cargan los resultados -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Elementos de la derecha -->
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        <!-- Alertas -->
                        <li class="nav-item dropdown no-arrow me-3">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell fa-fw"></i>
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="alertsDropdown">
                                <h6 class="dropdown-header">
                                    <i class="bi bi-bell me-2"></i>
                                    Centro de Alertas
                                </h6>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="me-3">
                                        <div class="icon-circle bg-primary">
                                            <i class="bi bi-file-text text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">15 de Diciembre, 2023</div>
                                        <span class="font-weight-bold">Nuevo contrato pendiente de revisión</span>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-center small text-gray-500" href="#">
                                    <i class="bi bi-eye me-1"></i>
                                    Mostrar Todas las Alertas
                                </a>
                            </div>
                        </li>

                        <!-- Separador -->
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Usuario -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="me-2 d-none d-lg-inline text-gray-600 small">@User.FindFirst("FullName")?.Value</span>
                                <div class="avatar">
                                    <span class="avatar-initials">@User.FindFirst("Avatar")?.Value</span>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                    <i class="bi bi-person me-2 text-gray-400"></i>
                                    Perfil
                                </a>
                                @if (User.IsInRole("administrador"))
                                {
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Configuracion">
                                        <i class="bi bi-gear me-2 text-gray-400"></i>
                                        Configuración
                                    </a>
                                }
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2 text-gray-400"></i>
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

           
            <div class="main-content">
                <!-- Mensajes de notificación -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
            <!-- End of Page Content -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; CIMA Inmobiliaria 2023</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->
    </div>

    <!-- Resto del JavaScript permanece igual -->
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Custom Admin Scripts -->
    <script>
        // Toggle sidebar for mobile
        $("#sidebarToggleTop").click(function() {
            $("#accordionSidebar").toggleClass("show");
        });

        // Auto-close mobile sidebar when clicking outside
        $(document).click(function(e) {
            if (!$(e.target).closest('#accordionSidebar, #sidebarToggleTop').length) {
                $("#accordionSidebar").removeClass("show");
            }
        });

        // Mark active nav items
        $(document).ready(function() {
            var currentPath = window.location.pathname;
            $('.sidebar .nav-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>