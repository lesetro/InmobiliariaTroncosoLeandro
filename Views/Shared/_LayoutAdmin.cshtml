  <script>
$(document).ready(function() {
    let searchTimeout;
    let isSearching = false;
    const searchInput = $('#globalSearchInput');
    const searchDropdown = $('#searchResultsDropdown');
    const resultsContainer = $('#searchResultsContainer');
    const searchButton = $('#searchButton');
    
    // Búsqueda desde la 3ra letra
    searchInput.on('input', function() {
        const termino = $(this).val().trim();
        
        clearTimeout(searchTimeout);
        
        // Solo buscar desde la 3ra letra
        if (termino.length < 3) {
            searchDropdown.hide();
            return;
        }
        
        // Esperar 400ms para evitar muchas consultas
        searchTimeout = setTimeout(() => {
            if (!isSearching) {
                realizarBusquedaGlobal(termino);
            }
        }, 400);
    });
    
    // Manejar clic en botón de búsqueda
    searchButton.on('click', function() {
        const termino = searchInput.val().trim();
        if (termino.length >= 3) {
            // Ir a página de resultados completos
            window.open(`/GlobalSearch?q=${encodeURIComponent(termino)}`, '_blank');
        }
    });
    
    // Enter en el input
    searchInput.on('keypress', function(e) {
        if (e.which === 13) { // Enter
            const termino = $(this).val().trim();
            if (termino.length >= 3) {
                window.open(`/GlobalSearch?q=${encodeURIComponent(termino)}`, '_blank');
            }
        }
    });
    
    // Ocultar dropdown al hacer clic fuera
    $(document).on('click', function(e) {
        if (!$(e.target).closest('.navbar-search').length) {
            searchDropdown.hide();
        }
    });
    
    // Mostrar el dropdown cuando se hace foco en el input (si ya hay texto)
    searchInput.on('focus', function() {
        const termino = $(this).val().trim();
        if (termino.length >= 3) {
            searchDropdown.show();
        }
    });
    
    function realizarBusquedaGlobal(termino) {
        isSearching = true;
        
        // Mostrar indicador de carga
        resultsContainer.html(`
            <div class="dropdown-item-text text-center py-3">
                <div class="spinner-border spinner-border-sm text-primary me-2"></div>
                <span class="text-muted">Buscando "${termino}"...</span>
            </div>
        `);
        searchDropdown.show();
        
        // Realizar búsquedas usando tus endpoints existentes
        Promise.allSettled([
            $.get('/api/Search/usuarios', { termino: termino, limite: 4 }),
            $.get('/api/Search/inmuebles', { termino: termino, limite: 4 }),
            $.get('/api/Search/contratos', { termino: termino, limite: 3 }),
            $.get('/api/Search/intereses-inmuebles', { termino: termino, limite: 3 })
        ]).then(results => {
            // Extraer resultados exitosos
            const usuarios = results[0].status === 'fulfilled' ? results[0].value : [];
            const inmuebles = results[1].status === 'fulfilled' ? results[1].value : [];
            const contratos = results[2].status === 'fulfilled' ? results[2].value : [];
            const intereses = results[3].status === 'fulfilled' ? results[3].value : [];
            
            mostrarResultadosEnDropdown(usuarios, inmuebles, contratos, intereses, termino);
        }).catch(error => {
            console.error('Error en búsqueda global:', error);
            resultsContainer.html(`
                <div class="dropdown-item-text text-center py-3 text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Error en la búsqueda
                </div>
            `);
        }).finally(() => {
            isSearching = false;
        });
    }
    
    function mostrarResultadosEnDropdown(usuarios, inmuebles, contratos, intereses, termino) {
        let html = '';
        let totalResultados = 0;
        
        // Usuarios
        if (usuarios && usuarios.length > 0) {
            html += `<h6 class="dropdown-header text-primary">
                        <i class="bi bi-people me-2"></i>Usuarios (${usuarios.length})
                     </h6>`;
            usuarios.forEach(usuario => {
                totalResultados++;
                html += `
                    <a class="dropdown-item py-2" href="/Usuario/Details/${usuario.id}" target="_blank">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 32px; height: 32px;">
                                    <i class="bi bi-person text-white small"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">${usuario.texto}</div>
                                ${usuario.email ? `<small class="text-muted"><i class="bi bi-envelope me-1"></i>${usuario.email}</small>` : ''}
                                ${usuario.telefono ? `<small class="text-muted d-block"><i class="bi bi-telephone me-1"></i>${usuario.telefono}</small>` : ''}
                            </div>
                            <small class="badge bg-primary">${usuario.tipo}</small>
                        </div>
                    </a>
                `;
            });
            html += '<div class="dropdown-divider"></div>';
        }
        
        // Inmuebles
        if (inmuebles && inmuebles.length > 0) {
            html += `<h6 class="dropdown-header text-success">
                        <i class="bi bi-building me-2"></i>Inmuebles (${inmuebles.length})
                     </h6>`;
            inmuebles.forEach(inmueble => {
                totalResultados++;
                html += `
                    <a class="dropdown-item py-2" href="/Inmuebles/Details/${inmueble.id}" target="_blank">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="rounded-circle bg-success d-flex align-items-center justify-content-center" 
                                     style="width: 32px; height: 32px;">
                                    <i class="bi bi-building text-white small"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">${inmueble.texto}</div>
                                ${inmueble.infoAdicional ? `<small class="text-muted">${inmueble.infoAdicional}</small>` : ''}
                            </div>
                            <small class="badge bg-success">${inmueble.tipo}</small>
                        </div>
                    </a>
                `;
            });
            html += '<div class="dropdown-divider"></div>';
        }
        
        // Contratos
        if (contratos && contratos.length > 0) {
            html += `<h6 class="dropdown-header text-info">
                        <i class="bi bi-file-earmark-text me-2"></i>Contratos (${contratos.length})
                     </h6>`;
            contratos.forEach(contrato => {
                totalResultados++;
                html += `
                    <a class="dropdown-item py-2" href="/Contratos/Details/${contrato.id}" target="_blank">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="rounded-circle bg-info d-flex align-items-center justify-content-center" 
                                     style="width: 32px; height: 32px;">
                                    <i class="bi bi-file-earmark-text text-white small"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">${contrato.texto}</div>
                                ${contrato.infoAdicional ? `<small class="text-muted">${contrato.infoAdicional}</small>` : ''}
                            </div>
                            <small class="badge bg-info">${contrato.tipo}</small>
                        </div>
                    </a>
                `;
            });
            html += '<div class="dropdown-divider"></div>';
        }
        
        // Intereses
        if (intereses && intereses.length > 0) {
            html += `<h6 class="dropdown-header text-warning">
                        <i class="bi bi-envelope-heart me-2"></i>Intereses (${intereses.length})
                     </h6>`;
            intereses.forEach(interes => {
                totalResultados++;
                html += `
                    <a class="dropdown-item py-2" href="/InteresInmueble/Details/${interes.id}" target="_blank">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                     style="width: 32px; height: 32px;">
                                    <i class="bi bi-envelope-heart text-white small"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">${interes.texto}</div>
                                ${interes.email ? `<small class="text-muted"><i class="bi bi-envelope me-1"></i>${interes.email}</small>` : ''}
                            </div>
                            <small class="badge bg-warning text-dark">${interes.tipo}</small>
                        </div>
                    </a>
                `;
            });
        }
        
        // Si no hay resultados
        if (totalResultados === 0) {
            html = `
                <div class="dropdown-item-text text-center py-4">
                    <i class="bi bi-search text-muted display-6"></i>
                    <div class="mt-2 text-muted">
                        <strong>No se encontraron resultados</strong>
                        <br><small>No hay coincidencias para "${termino}"</small>
                    </div>
                </div>
            `;
        } else {
            // Agregar footer con opción para ver todos los resultados
            html += `
                <div class="dropdown-item-text bg-light text-center py-2 border-top">
                    <small class="text-muted">Se encontraron ${totalResultados} resultado(s)</small>
                </div>
                <a class="dropdown-item text-center py-3 bg-primary text-white fw-bold" 
                   href="/GlobalSearch?q=${encodeURIComponent(termino)}" target="_blank">
                    <i class="bi bi-search me-2"></i>
                    Ver todos los resultados
                </a>
            `;
        }
        
        resultsContainer.html(html);
    }
});
</script>

