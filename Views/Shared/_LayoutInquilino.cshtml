<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Espacio CIMA</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Client Dashboard Styles -->
    <style>
        body {
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fc;
        }
        .sidebar {
            min-height: 100vh;
            max-height: 100vh;
            /* COLOR POR ROL */
            @if (User.IsInRole("propietario"))
            {
                <text>background: linear-gradient(180deg, #1cc88a 10%, #13855c 100%);</text>
            }
            else if (User.IsInRole("inquilino"))
            {
                <text>background: linear-gradient(180deg, #36b9cc 10%, #258391 100%);</text>
            }
            else
            {
                <text>background: linear-gradient(180deg, #6a4a8c 10%, #4e3670 100%);</text>
            }
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
            overflow-x: hidden;
            padding-bottom: 2rem;
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 1rem 1.5rem;
            border-radius: 0;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.2);
        }
        .content-wrapper {
            margin-left: 250px;
            min-height: 100vh;
            background-color: #f8f9fc;
        }
        
        /* CORRECCIÓN PRINCIPAL: Padding para el contenido principal */
        .main-content {
            padding: 2rem 2.5rem;
            min-height: calc(100vh - 70px);
        }
        
        /* Topbar fijo */
        .topbar {
            height: 70px;
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
            padding: 0 2.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 999;
        }
        
        .sidebar-brand {
            height: 4.375rem;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 800;
            padding: 1.5rem 1rem;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.1);
            color: #fff;
            flex-shrink: 0;
        }
        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            margin: 0 1rem;
        }
        .sidebar-heading {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            padding: 1.5rem 1.5rem 0.5rem;
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -250px;
                max-height: none;
            }
            .content-wrapper {
                margin-left: 0;
            }
            .sidebar.show {
                margin-left: 0;
            }
            
            .main-content {
                padding: 1.5rem;
            }
            
            .topbar {
                padding: 0 1.5rem;
            }
        }

        @@media (max-width: 576px) {
            .main-content {
                padding: 1rem;
            }
            
            .topbar {
                padding: 0 1rem;
            }
        }

        /* Badges para estados */
        .badge-vigente { background-color: #1cc88a; }
        .badge-proximo { background-color: #f6c23e; }
        .badge-vencido { background-color: #e74a3b; }
        .badge-disponible { background-color: #1cc88a; }
        .badge-alquilado { background-color: #4e73df; }
        .badge-vendido { background-color: #6f42c1; }
        
        /* Mejoras visuales para cards */
        .card {
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            border: 1px solid #e3e6f0;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1rem 1.25rem;
        }
        
        .card-body {
            padding: 1.25rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="accordionSidebar">
        <!-- Sidebar Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" 
           asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" 
           asp-action="Index">
            <div class="sidebar-brand-icon">
                <i class="bi bi-house-door"></i>
            </div>
            <div class="sidebar-brand-text mx-3">
                @if (User.IsInRole("propietario"))
                {
                    <text>Mi Espacio Propietario</text>
                }
                else if (User.IsInRole("inquilino"))
                {
                    <text>Mi Espacio Inquilino</text>
                }
                else
                {
                    <text>Mi Espacio</text>
                }
            </div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Dashboard -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Mi Dashboard</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- SECCIÓN ESPECÍFICA PARA PROPIETARIOS -->
        @if (User.IsInRole("propietario"))
        {
            <div class="sidebar-heading">Mis Propiedades</div>

            <!-- Mis Inmuebles -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisInmuebles">
                    <i class="bi bi-building"></i>
                    <span>Mis Propiedades</span>
                </a>
            </li>

            <!-- Agregar Inmueble -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="CrearInmueble">
                    <i class="bi bi-plus-circle"></i>
                    <span>Agregar Propiedad</span>
                </a>
            </li>

            <!-- Mis Contratos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisContratos">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Mis Contratos</span>
                </a>
            </li>

            <!-- Mis Pagos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Propietario" asp-action="MisPagos">
                    <i class="bi bi-currency-dollar"></i>
                    <span>Mis Ingresos</span>
                </a>
            </li>
        }

        <!-- SECCIÓN ESPECÍFICA PARA INQUILINOS -->
        @if (User.IsInRole("inquilino"))
        {
            <div class="sidebar-heading">Mi Alquiler</div>

            <!-- Mi Contrato -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="MiContrato">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Mi Contrato</span>
                </a>
            </li>

            <!-- Mi Inmueble -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="MiInmueble">
                    <i class="bi bi-house-door"></i>
                    <span>Mi Vivienda</span>
                </a>
            </li>

            <!-- Mis Pagos -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="MisPagos">
                    <i class="bi bi-currency-dollar"></i>
                    <span>Mis Pagos</span>
                </a>
            </li>

            <!-- Reportar Problema -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Inquilino" asp-action="ReportarProblema">
                    <i class="bi bi-tools"></i>
                    <span>Reportar Problema</span>
                </a>
            </li>
        }

        <!-- SECCIÓN COMPARTIDA -->
        <hr class="sidebar-divider">

        <div class="sidebar-heading">Mi Cuenta</div>

        <!-- Mi Perfil -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" asp-action="MiPerfil">
                <i class="bi bi-person"></i>
                <span>Mi Perfil</span>
            </a>
        </li>

        <!-- Editar Perfil -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="@(User.IsInRole("propietario") ? "Propietario" : "Inquilino")" asp-action="EditarPerfil">
                <i class="bi bi-pencil-square"></i>
                <span>Editar Perfil</span>
            </a>
        </li>

        <!-- Contacto -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Contacto">
                <i class="bi bi-telephone"></i>
                <span>Contactar Soporte</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">
    </nav>

    <div class="content-wrapper">
        <!-- Topbar -->
        <nav class="topbar">
            <!-- Botón para toggle sidebar en móvil -->
            <button class="btn btn-link text-dark d-md-none" id="sidebarToggleTop">
                <i class="bi bi-list"></i>
            </button>
            
            <!-- User Info -->
            <div class="d-flex align-items-center">
                <span class="text-gray-600 small me-3">Bienvenido, @User.Identity.Name</span>
                <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Sitio Principal
                </a>
                <form class="d-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                        <i class="bi bi-box-arrow-right"></i> Salir
                    </button>
                </form>
            </div>
        </nav>

        <!-- Contenido Principal CON PADDING CORREGIDO -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        // Toggle sidebar en móvil
        $("#sidebarToggleTop").click(function() {
            $("#accordionSidebar").toggleClass("show");
        });

        // Cerrar sidebar al hacer click fuera en móvil
        $(document).click(function(e) {
            if (!$(e.target).closest('#accordionSidebar, #sidebarToggleTop').length) {
                $("#accordionSidebar").removeClass("show");
            }
        });

        // Marcar enlace activo
        $(document).ready(function() {
            var currentPath = window.location.pathname;
            $('.sidebar .nav-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>