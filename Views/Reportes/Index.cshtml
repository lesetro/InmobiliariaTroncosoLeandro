@{
    ViewData["Title"] = "Gestion de Reportes";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="bi bi-graph-up text-primary me-2"></i>
            Gestion de Reportes
        </h2>
        <p class="text-muted mb-0">Resumen general del sistema</p>
    </div>
    <div>
        <button class="btn btn-outline-primary" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>Actualizar
        </button>
    </div>
</div>

<!-- Resumen General -->
@if (ViewBag.ResumenGeneral != null)
{
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-success fs-1"></i>
                    <h4 class="text-success mt-2">
                        $@(GetPropertyValue(ViewBag.ResumenGeneral, "IngresosTotal")?.ToString() ?? "0")
                    </h4>
                    <p class="text-muted small mb-0">Ingresos Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-credit-card text-info fs-1"></i>
                    <h4 class="text-info mt-2">
                        @(GetPropertyValue(ViewBag.ResumenGeneral, "TotalPagos")?.ToString() ?? "0")
                    </h4>
                    <p class="text-muted small mb-0">Total Pagos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-house-door text-warning fs-1"></i>
                    <h4 class="text-warning mt-2">
                        @(GetPropertyValue(ViewBag.ResumenGeneral, "PagosAlquiler")?.ToString() ?? "0")
                    </h4>
                    <p class="text-muted small mb-0">Pagos Alquiler</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-primary fs-1"></i>
                    <h4 class="text-primary mt-2">
                        @(GetPropertyValue(ViewBag.ResumenGeneral, "PagosVenta")?.ToString() ?? "0")
                    </h4>
                    <p class="text-muted small mb-0">Pagos Venta</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Reportes Rápidos -->
<div class="row">
    <!-- Ingresos por Mes -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-bar-chart me-2"></i>Ingresos por Mes
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.IngresosPorMes != null)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            @foreach (var ingreso in ViewBag.IngresosPorMes)
                            {
                                <tr>
                                    <td>@GetPropertyValue(ingreso, "NombreMes")</td>
                                    <td class="text-end fw-bold text-success">
                                        @GetPropertyValue(ingreso, "TotalIngresos")
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay datos disponibles</p>
                }
                <div class="text-center mt-3">
                    <a href="@Url.Action("Ingresos")" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye me-1"></i>Ver Reporte Completo
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Inmuebles -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-trophy me-2"></i>Top Inmuebles
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.TopInmuebles != null)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var inmueble in ViewBag.TopInmuebles)
                        {
                            <div class="list-group-item px-0 d-flex justify-content-between">
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-building me-1"></i>
                                        @GetPropertyValue(inmueble, "Direccion")
                                    </small>
                                </div>
                                <div class="fw-bold text-success">
                                    @GetPropertyValue(inmueble, "TotalIngresos")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay datos disponibles</p>
                }
                <div class="text-center mt-3">
                    <a href="@Url.Action("TopInmuebles")" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-eye me-1"></i>Ver Ranking Completo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estado de Inmuebles y Navegación -->
<div class="row">
    <!-- Estado de Inmuebles -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart me-2"></i>Estado de Inmuebles
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.EstadoInmuebles != null)
                {
                    @foreach (var estado in ViewBag.EstadoInmuebles)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>
                                <i class="bi bi-circle-fill text-@(GetEstadoBadgeClass(GetPropertyValue(estado, "Estado")?.ToString())) me-2"></i>
                                @GetPropertyValue(estado, "Estado")
                            </span>
                            <span class="badge bg-secondary">
                                @GetPropertyValue(estado, "Cantidad")
                            </span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No hay datos disponibles</p>
                }
                <div class="text-center mt-3">
                    <a href="@Url.Action("EstadoInmuebles")" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-eye me-1"></i>Ver Detalle Completo
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Navegación Rápida -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="bi bi-speedometer2 me-2"></i>Navegación Rápida
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Alertas", "Reportes" )" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        Ver Alertas
                    </a>
                    <a href="@Url.Action("Index", "Pagos")" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-credit-card me-1"></i>
                        Gestión de Pagos
                    </a>
                    <a href="@Url.Action("Index", "Contratos")" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-file-text me-1"></i>
                        Gestión de Contratos
                    </a>
                    <a href="@Url.Action("Index", "Inmuebles")" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-building me-1"></i>
                        Gestión de Inmuebles
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@functions {
    private object? GetPropertyValue(object obj, string propertyName)
    {
        if (obj == null) return null;
        
        try
        {
            var property = obj.GetType().GetProperty(propertyName);
            return property?.GetValue(obj);
        }
        catch
        {
            return null;
        }
    }

    private string GetEstadoBadgeClass(string estado)
    {
        return estado?.ToLower() switch
        {
            "disponible" => "success",
            "alquilado" => "info",
            "vendido" => "warning",
            "mantenimiento" => "danger",
            _ => "secondary"
        };
    }
}