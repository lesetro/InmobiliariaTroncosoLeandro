@model Inmobiliaria_troncoso_leandro.Models.Inmueble

<h2>Detalles del Inmueble</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="containerDetalle">
    <h4>Inmueble</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.TipoInmueble?.Nombre</dd>

        <dt class="col-sm-2">Uso</dt>
        <dd class="col-sm-10">@Model.Uso</dd>

        <dt class="col-sm-2">Ambientes</dt>
        <dd class="col-sm-10">@Model.Ambientes</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Alquilado</dt>
        <dd class="col-sm-10">
            @(ViewBag.EstaAlquilado ? "Sí" : "No")
            @if (ViewBag.MostrarFechaFin && ViewBag.FechaFin != null)
            {
                <span> (Fin de contrato: @((DateTime)ViewBag.FechaFin).ToString("dd/MM/yyyy"))</span>
            }
        </dd>

        <dt class="col-sm-2">Propietario</dt>
        <dd class="col-sm-10">@(Model.Propietario?.Usuario?.Nombre + " " + Model.Propietario?.Usuario?.Apellido)</dd>

        <dt class="col-sm-2">Fecha Alta</dt>
        <dd class="col-sm-10">@Model.FechaAlta.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Coordenadas</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Coordenadas))
            {
                <a href="https://www.google.com/maps?q=@Model.Coordenadas" target="_blank">@Model.Coordenadas</a>
            }
            else
            {
                <span>No especificadas</span>
            }
        </dd>
    </dl>

    @if (Model.Imagenes != null && Model.Imagenes.Any())
    {
        <h4>Imágenes</h4>
        <div id="carouselInmueble" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var imagen in Model.Imagenes.OrderBy(i => i.Orden))
                {
                    <div class="carousel-item @(imagen.Orden == 1 ? "active" : "")">
                        <img src="@imagen.Url" class="d-block w-100" alt="@(imagen.Descripcion ?? "Imagen del inmueble")" style="max-height: 400px; object-fit: cover;" loading="lazy">
                        @if (!string.IsNullOrEmpty(imagen.Descripcion))
                        {
                            <div class="carousel-caption d-none d-md-block">
                                <p>@imagen.Descripcion</p>
                            </div>
                        }
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselInmueble" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselInmueble" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    }
    else
    {
        <p>No hay imágenes disponibles para este inmueble.</p>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.IdInmueble" class="btn btn-warning">Editar</a>
        <a asp-controller="ImagenesInmueble" asp-action="Index" asp-route-idInmueble="@Model.IdInmueble" class="btn btn-primary">Gestionar Imágenes</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#meInteresaModal">Me Interesa</button>
    </div>
</div>

<!-- Modal para Me Interesa -->
<div class="modal fade" id="meInteresaModal" tabindex="-1" aria-labelledby="meInteresaLabel" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="meInteresaLabel">Me Interesa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="MeInteresa" method="post">
                    <input type="hidden" name="idInmueble" value="@Model.IdInmueble" />
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" name="Nombre" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Telefono">Teléfono</label>
                        <input type="tel" name="Telefono" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Si el usuario está logueado, prellenar el modal con sus datos 
        // cuando hagamos lo de la autentificacion trabajermos en esto 
        // la idea es obtener los datos del usuario logueado y asignarlos a los campos del modal
        // para que se mande a la tabla de interes_inmueble
        //ahora los manda para los no logueados
    </script>
}