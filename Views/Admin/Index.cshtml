@model AdminDashboardDto
@{
    ViewData["Title"] = "Dashboard Administrador";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header del Dashboard -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-speedometer2"></i> Panel Administrador
        </h1>
        <div class="d-none d-lg-inline-block">
            <span class="badge badge-primary">Sistema Inmobiliario CIMA</span>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row">
        <!-- Usuarios -->
<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Total Usuarios
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Usuarios.Total</div>
                </div>
                <div class="col-auto">
                    <i class="bi bi-people fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>

        <!-- Propietarios -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Propietarios Activos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Propietarios.Total</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-badge fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inmuebles -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Inmuebles Disponibles
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.Inmuebles.Disponibles</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @(Model.Inmuebles.Total > 0 ? ((double)Model.Inmuebles.Disponibles / Model.Inmuebles.Total * 100).ToString("F1") : "0")%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Intereses Pendientes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Intereses Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Intereses.Pendientes</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-envelope-heart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fila de contenido -->
    <div class="row">
        <!-- Gráfico de Usuarios por Rol -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Distribución de Usuarios por Rol</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="usuariosChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas Rápidas -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Resumen del Sistema</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Contratos Vigentes</div>
                                <div class="h4 mb-0 font-weight-bold text-success">@Model.Contratos.Vigentes</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Total Inmuebles</div>
                                <div class="h4 mb-0 font-weight-bold text-info">@Model.Inmuebles.Total</div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Inquilinos</div>
                                <div class="h4 mb-0 font-weight-bold text-primary">@Model.Inquilinos.Total</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Personas Interesadas</div>
                                <div class="h4 mb-0 font-weight-bold text-warning">@Model.Intereses.Total</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tablas de Datos Recientes -->
    <div class="row">
        <!-- Contratos Vigentes -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Contratos Vigentes Recientes</h6>
                    <a asp-controller="Contratos" asp-action="Index" class="btn btn-primary btn-sm">
                        Ver Todos <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Contratos.Recientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Inmueble</th>
                                        <th>Inquilino</th>
                                        <th>Vencimiento</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contrato in Model.Contratos.Recientes)
                                    {
                                        <tr>
                                            <td>@contrato.InmuebleDireccion</td>
                                            <td>@contrato.InquilinoNombre</td>
                                            <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge badge-success">@contrato.Estado</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay contratos vigentes para mostrar.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Intereses Recientes -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Intereses Recientes</h6>
                    <a asp-controller="InteresInmueble" asp-action="Index" class="btn btn-primary btn-sm">
                        Ver Todos <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Intereses.UltimosIntereses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Inmueble</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var interes in Model.Intereses.UltimosIntereses)
                                    {
                                        <tr>
                                            <td>@interes.Nombre</td>
                                            <td>@interes.InmuebleDireccion</td>
                                            <td>@interes.DiasDesdeInteres</td>
                                            <td>
                                                @if (interes.Contactado)
                                                {
                                                    <span class="badge badge-success">Contactado</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Pendiente</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay intereses recientes para mostrar.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos Rápidos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Accesos Rápidos</h6>
                </div>
                <div class="card-body">
                    <div class="row flex-nowrap overflow-auto">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Usuario" asp-action="Create" class="btn btn-outline-primary btn-block">
                                <i class="bi bi-person-plus"></i><br>Crear Usuario
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Inmuebles" asp-action="Create" class="btn btn-outline-success btn-block">
                                <i class="bi bi-building-add"></i><br>Agregar Inmueble
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Contratos" asp-action="Create" class="btn btn-outline-info btn-block">
                                <i class="bi bi-file-earmark-plus"></i><br>Nuevo Contrato
                            </a>
                        </div>
                         @if (User.IsInRole("administrador"))
                        {
                            
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-warning btn-block">
                                <i class="bi bi-graph-up"></i><br>Ver Reportes
                            </a>
                        
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de usuarios por rol
        const ctx = document.getElementById('usuariosChart').getContext('2d');
        const usuariosData = @Html.Raw(Json.Serialize(Model.Usuarios.PorRol));
        
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: Object.keys(usuariosData),
                datasets: [{
                    data: Object.values(usuariosData),
                    backgroundColor: [
                        '#e74a3b',  // administrador - rojo
                        '#f39c12',  // empleado - naranja
                        '#3498db',  // propietario - azul
                        '#2ecc71'   // inquilino - verde
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .chart-area {
        position: relative;
        height: 300px;
    }
    .progress-sm {
        height: 0.5rem;
    }
</style>