@model Inmobiliaria_troncoso_leandro.Models.Contrato
@{
    ViewData["Title"] = "Crear Contrato";
    var inmuebles = ViewData["Inmuebles"] as List<Inmueble> ?? new List<Inmueble>();
    var inquilinos = ViewData["Inquilinos"] as List<Inquilino> ?? new List<Inquilino>();
    var usuarios = ViewData["Usuarios"] as List<Usuario> ?? new List<Usuario>();
}

<h1>Crear Contrato</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <!-- Dropdown para Inmueble -->
    <div class="form-group">
        <label asp-for="IdInmueble" class="control-label"></label>
        <select asp-for="IdInmueble" class="form-control">
            <option value="">-- Seleccione un inmueble --</option>
            @foreach(var inmueble in inmuebles)
            {
                <option value="@inmueble.IdInmueble">@inmueble.Direccion</option>
            }
        </select>
        <span asp-validation-for="IdInmueble" class="text-danger"></span>
    </div>
    
    <!-- Dropdown para Inquilino -->
    <div class="form-group">
        <label asp-for="IdInquilino" class="control-label"></label>
        <select asp-for="IdInquilino" class="form-control">
            <option value="">-- Seleccione un inquilino --</option>
            @foreach(var inquilino in inquilinos)
            {
                @if(inquilino != null && inquilino.Usuario != null)
                {
                    <option value="@inquilino.IdInquilino">
                        @inquilino.Usuario.Apellido, @inquilino.Usuario.Nombre - @inquilino.Usuario.Dni
                    </option>
                }
            }
        </select>
        <span asp-validation-for="IdInquilino" class="text-danger"></span>
    </div>
    
    <!-- Fecha de Inicio -->
    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label"></label>
        <input asp-for="FechaInicio" class="form-control" type="date" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    
    <!-- Fecha de Fin -->
    <div class="form-group">
        <label asp-for="FechaFin" class="control-label"></label>
        <input asp-for="FechaFin" class="form-control" type="date" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>
    
    <!-- Monto Mensual -->
    <div class="form-group">
        <label asp-for="MontoMensual" class="control-label"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="MontoMensual" class="form-control" type="number" step="0.01" min="0.01" />
        </div>
        <span asp-validation-for="MontoMensual" class="text-danger"></span>
    </div>
    
    <!-- Dropdown para Usuario Creador -->
    <div class="form-group">
        <label asp-for="IdUsuarioCreador" class="control-label"></label>
        <select asp-for="IdUsuarioCreador" class="form-control">
            <option value="">-- Seleccione un usuario --</option>
            @foreach(var usuario in usuarios)
            {
                @if(usuario != null && !string.IsNullOrEmpty(usuario.Nombre))
                {
                    <option value="@usuario.IdUsuario">@usuario.Apellido, @usuario.Nombre</option>
                }
            }
        </select>
        <span asp-validation-for="IdUsuarioCreador" class="text-danger"></span>
    </div>
    
    <!-- Información importante -->
    <div class="alert alert-info">
        <h6><i class="fas fa-info-circle"></i> Información importante:</h6>
        <ul>
            <li>El sistema verificará que el inmueble esté disponible en las fechas seleccionadas</li>
            <li>El contrato se creará con estado "Vigente" automáticamente</li>
            <li>La multa aplicada inicial será de $0.00</li>
        </ul>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Crear Contrato" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        // Validación adicional del lado cliente
        document.addEventListener('DOMContentLoaded', function() {
            const fechaInicio = document.querySelector('input[name="FechaInicio"]');
            const fechaFin = document.querySelector('input[name="FechaFin"]');
            
            fechaFin.addEventListener('change', function() {
                if (fechaInicio.value && fechaFin.value) {
                    if (new Date(fechaFin.value) <= new Date(fechaInicio.value)) {
                        alert('La fecha de fin debe ser posterior a la fecha de inicio');
                        fechaFin.value = '';
                    }
                }
            });
        });
    </script>
}