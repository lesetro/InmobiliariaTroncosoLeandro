@model Inmobiliaria_troncoso_leandro.Models.ContratoVenta

@{
    ViewData["Title"] = "Cancelar Contrato de Venta";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Cancelar Contrato de Venta
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">¿Está seguro que desea cancelar este contrato de venta?</h5>
                        <p class="mb-0">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Información del Contrato</h6>
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.IdContratoVenta</dd>

                                <dt class="col-sm-4">Inmueble:</dt>
                                <dd class="col-sm-8">@Model.Inmueble?.Direccion</dd>

                                <dt class="col-sm-4">Comprador:</dt>
                                <dd class="col-sm-8">@Model.Comprador?.NombreCompleto</dd>

                                <dt class="col-sm-4">Vendedor:</dt>
                                <dd class="col-sm-8">@Model.Vendedor?.Usuario?.NombreCompleto</dd>

                                <dt class="col-sm-4">Precio Total:</dt>
                                <dd class="col-sm-8">$@Model.PrecioTotal.ToString("N2")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6>Estado Actual</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @Model.EstadoBadgeClass">
                                        @Model.EstadoDescripcion
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Monto Pagado:</dt>
                                <dd class="col-sm-8">$@Model.MontoPagado.ToString("N2")</dd>

                                <dt class="col-sm-4">Saldo Pendiente:</dt>
                                <dd class="col-sm-8">$@Model.SaldoPendiente.ToString("N2")</dd>

                                <dt class="col-sm-4">Porcentaje:</dt>
                                <dd class="col-sm-8">@Model.PorcentajePagado.ToString("N2")%</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="CancelarContrato" asp-route-id="@Model.IdContratoVenta" method="post">
                        <input type="hidden" asp-for="IdContratoVenta" />

                        <div class="form-group">
                            <label for="motivoCancelacion" class="form-label">Motivo de Cancelación:</label>
                            <textarea id="motivoCancelacion" name="motivoCancelacion" class="form-control" rows="3"
                                placeholder="Ingrese el motivo de la cancelación..." required
                                maxlength="500"></textarea>
                            <small class="form-text text-muted">Máximo 500 caracteres</small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-ban"></i> Confirmar Cancelación
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.IdContratoVenta" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver a Detalles
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>