@model Inmobiliaria_troncoso_leandro.Models.ContratoVenta
@{
    ViewData["Title"] = "Detalles del Contrato de Venta";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header con información principal -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> Contrato de Venta #@Model.IdContratoVenta
                    </h3>
                    <div>
                        <span class="badge @Model.EstadoBadgeClass fs-6">@Model.EstadoDescripcion</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6><i class="bi bi-house"></i> Inmueble</h6>
                            <p class="fs-5 fw-bold text-primary">@Model.Inmueble?.Direccion</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-person-badge"></i> Vendedor</h6>
                            <p class="fs-6">@Model.Vendedor?.Usuario?.NombreCompleto</p>
                            <small class="text-muted">DNI: @Model.Vendedor?.Usuario?.Dni</small>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-person"></i> Comprador</h6>
                            <p class="fs-6">@Model.Comprador?.NombreCompleto</p>
                            <small class="text-muted">DNI: @Model.Comprador?.Dni</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alertas importantes -->
            @if (Model.Estado == "cancelada")
            {
                <div class="alert alert-danger">
                    <h5><i class="bi bi-exclamation-triangle"></i> CONTRATO CANCELADO</h5>
                    <p class="mb-1"><strong>Fecha de cancelación:</strong> @Model.FechaCancelacion?.ToString("dd/MM/yyyy")</p>
                    @if (!string.IsNullOrEmpty(Model.MotivoCancelacion))
                    {
                        <p class="mb-0"><strong>Motivo:</strong> @Model.MotivoCancelacion</p>
                    }
                </div>
            }
            else if (Model.Estado == "escriturada")
            {
                <div class="alert alert-success">
                    <h5><i class="bi bi-check-circle"></i> CONTRATO ESCRITURADO</h5>
                    <p class="mb-0"><strong>Fecha de escrituración:</strong> @Model.FechaEscrituracion?.ToString("dd/MM/yyyy")</p>
                </div>
            }

            <div class="row">
                <!-- Columna izquierda: Información financiera -->
                <div class="col-lg-6">
                    <!-- Tarjeta de información financiera -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-currency-dollar"></i> Información Financiera</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>Precio Total:</dt>
                                        <dd class="fs-4 fw-bold text-success">$@Model.PrecioTotal.ToString("N2")</dd>

                                        <dt>Monto Seña:</dt>
                                        <dd class="fs-5 text-info">$@Model.MontoSeña.ToString("N2")</dd>

                                        <dt>Anticipos Previstos:</dt>
                                        <dd class="fs-6">$@Model.MontoAnticipos.ToString("N2")</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>Monto Pagado:</dt>
                                        <dd class="fs-5 fw-bold text-success">$@Model.MontoPagado.ToString("N2")</dd>

                                        <dt>Saldo Pendiente:</dt>
                                        <dd class="fs-5 fw-bold text-danger">$@ViewBag.SaldoPendiente.ToString("N2")</dd>

                                        <dt>Porcentaje Completado:</dt>
                                        <dd class="fs-6">
                                            <span class="badge bg-info text-white">@Model.PorcentajePagado.ToString("N2")%</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Barra de progreso -->
                            <div class="mt-3">
                                <label class="form-label">Progreso del Pago:</label>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar 
                                        @(Model.PorcentajePagado >= 100 ? "bg-success" : 
                                          Model.PorcentajePagado >= 50 ? "bg-warning" : "bg-info")" 
                                         role="progressbar" 
                                         style="width: @(Model.PorcentajePagado > 100 ? 100 : Model.PorcentajePagado)%;"
                                         aria-valuenow="@Model.PorcentajePagado" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @Model.PorcentajePagado.ToString("N1")%
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tarjeta de fechas importantes -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Fechas Importantes</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-5">Inicio del Proceso:</dt>
                                <dd class="col-sm-7">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                                @if (Model.FechaEscrituracion.HasValue)
                                {
                                    <dt class="col-sm-5">Escrituración:</dt>
                                    <dd class="col-sm-7 text-success">@Model.FechaEscrituracion.Value.ToString("dd/MM/yyyy")</dd>
                                }

                                @if (Model.FechaCancelacion.HasValue)
                                {
                                    <dt class="col-sm-5">Cancelación:</dt>
                                    <dd class="col-sm-7 text-danger">@Model.FechaCancelacion.Value.ToString("dd/MM/yyyy")</dd>
                                }

                                <dt class="col-sm-5">Creación:</dt>
                                <dd class="col-sm-7 text-muted">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-5">Última Modificación:</dt>
                                <dd class="col-sm-7 text-muted">@Model.FechaModificacion.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Columna derecha: Información adicional -->
                <div class="col-lg-6">
                    <!-- Tarjeta de información del proceso -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Información del Proceso</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <h6>Estado Actual:</h6>
                                    <div class="alert alert-@(Model.Estado == "escriturada" ? "success" : 
                                                           Model.Estado == "cancelada" ? "danger" : 
                                                           Model.Estado == "seña_pendiente" ? "warning" : "info")">
                                        <strong>@Model.EstadoDescripcion</strong>
                                        <br>
                                        <small>
                                            @switch (Model.Estado)
                                            {
                                                case "seña_pendiente":
                                                    <text>Esperando el pago de la seña inicial.</text>
                                                    break;
                                                case "seña_pagada":
                                                    <text>Seña pagada, proceso de venta en curso.</text>
                                                    break;
                                                case "en_proceso":
                                                    <text>Pagando anticipos, proceso avanzando.</text>
                                                    break;
                                                case "pendiente_escritura":
                                                    <text>Pago completo, pendiente de escrituración.</text>
                                                    break;
                                                case "escriturada":
                                                    <text>Venta completada y escriturada.</text>
                                                    break;
                                                case "cancelada":
                                                    <text>Contrato cancelado.</text>
                                                    break;
                                            }
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Información de usuarios -->
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <h6>Usuario Creador:</h6>
                                    <p class="mb-1">@Model.UsuarioCreador?.NombreCompleto</p>
                                    <small class="text-muted">Creado el @Model.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                </div>
                                @if (Model.UsuarioCancelador != null)
                                {
                                    <div class="col-md-6">
                                        <h6>Usuario Cancelador:</h6>
                                        <p class="mb-1">@Model.UsuarioCancelador?.NombreCompleto</p>
                                        <small class="text-muted">Cancelado el @Model.FechaCancelacion?.ToString("dd/MM/yyyy")</small>
                                    </div>
                                }
                            </div>

                            <!-- Observaciones -->
                            @if (!string.IsNullOrEmpty(Model.Observaciones))
                            {
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <h6><i class="bi bi-chat-text"></i> Observaciones:</h6>
                                        <div class="alert alert-light border">
                                            @Model.Observaciones
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Motivo de cancelación -->
                            @if (!string.IsNullOrEmpty(Model.MotivoCancelacion))
                            {
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <h6><i class="bi bi-exclamation-triangle"></i> Motivo de Cancelación:</h6>
                                        <div class="alert alert-danger">
                                            @Model.MotivoCancelacion
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Tarjeta de acciones -->
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-lightning"></i> Acciones</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <!-- Botón Editar -->
                                @if (Model.Estado != "cancelada" && Model.Estado != "escriturada")
                                {
                                    <a asp-action="Edit" asp-route-id="@Model.IdContratoVenta" 
                                       class="btn btn-primary me-md-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                }

                                <!-- Botón Cancelar -->
                                @if (Model.Estado != "cancelada" && Model.Estado != "escriturada")
                                {
                                    <a asp-action="Cancelar" asp-route-id="@Model.IdContratoVenta" 
                                       class="btn btn-danger me-md-2">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </a>
                                }

                                <!-- Botón Marcar Escriturada -->
                                @if (Model.Estado == "pendiente_escritura" || (Model.EstaCompleta && Model.Estado != "escriturada" && Model.Estado != "cancelada"))
                                {
                                    <a asp-action="MarcarEscriturada" asp-route-id="@Model.IdContratoVenta" 
                                       class="btn btn-success me-md-2">
                                        <i class="bi bi-file-earmark-check"></i> Marcar Escriturada
                                    </a>
                                }

                                <!-- Botón Volver -->
                                <a asp-controller="Contratos" asp-action="Index" 
                                   class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Volver
                                </a>
                            </div>

                            <!-- Información adicional de acciones -->
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i> 
                                    @if (Model.Estado == "cancelada")
                                    {
                                        <text>Este contrato está cancelado y no se pueden realizar modificaciones.</text>
                                    }
                                    else if (Model.Estado == "escriturada")
                                    {
                                        <text>Este contrato está escriturado y completado.</text>
                                    }
                                    else if (Model.EstaCompleta)
                                    {
                                        <text>Pago completo. Puede proceder a la escrituración.</text>
                                    }
                                    else
                                    {
                                        <text>Proceso de venta en curso. Saldo pendiente: $@ViewBag.SaldoPendiente.ToString("N2")</text>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección de pagos (si existen) -->
            @if (Model.Pagos != null && Model.Pagos.Any())
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0"><i class="bi bi-receipt"></i> Historial de Pagos</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>ID</th>
                                                <th>Fecha</th>
                                                <th>Monto</th>
                                                <th>Estado</th>
                                                <th>Tipo</th>
                                                <th>Observaciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var pago in Model.Pagos.OrderByDescending(p => p.FechaPago))
                                            {
                                                <tr>
                                                    <td>@pago.IdPago</td>
                                                    <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                                                    <td class="fw-bold">$@pago.MontoBase.ToString("N2")</td>
                                                    <td>
                                                        <span class="badge @(pago.Estado == "pagado" ? "bg-success" : "bg-warning")">
                                                            @pago.Estado
                                                        </span>
                                                    </td>
                                                    <td>@pago.TipoPago</td>
                                                    <td>@(pago.Observaciones ?? "Sin observaciones")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr class="table-primary">
                                                <td colspan="2" class="text-end fw-bold">Total Pagado:</td>
                                                <td class="fw-bold">$@Model.Pagos.Where(p => p.Estado == "pagado").Sum(p => p.MontoBase).ToString("N2")</td>
                                                <td colspan="3"></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> Sin Pagos Registrados</h6>
                            <p class="mb-0">No se han registrado pagos para este contrato de venta.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

    <style>
        .card {
            border: none;
            border-radius: 10px;
        }
        
        .card-header {
            border-radius: 10px 10px 0 0 !important;
            font-weight: 600;
        }
        
        .progress {
            border-radius: 10px;
        }
        
        .progress-bar {
            border-radius: 10px;
        }
        
        dt {
            font-weight: 600;
            color: #495057;
        }
        
        dd {
            margin-bottom: 0.5rem;
        }
        
        .table th {
            font-weight: 600;
            background-color: #f8f9fa;
        }
        
        .badge {
            font-size: 0.75em;
        }
    </style>
}