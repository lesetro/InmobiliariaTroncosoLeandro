@model Inmobiliaria_troncoso_leandro.Models.ContratoVenta
@{
    ViewData["Title"] = "Editar Contrato de Venta";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Contrato de Venta #@Model.IdContratoVenta</h3>
            </div>
            <div class="card-body">

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>Error:</strong> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6>Se encontraron los siguientes errores:</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Estado actual del contrato -->
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Estado actual:</strong>
                            <span class="badge @Model.EstadoBadgeClass">@Model.EstadoDescripcion</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Progreso de pago:</strong>
                            <div class="progress mt-1">
                                <div class="progress-bar @(Model.PorcentajePagado >= 100 ? "bg-success" : "bg-info")" 
                                     role="progressbar" 
                                     style="width: @(Model.PorcentajePagado)%;"
                                     aria-valuenow="@Model.PorcentajePagado" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    @Model.PorcentajePagado.ToString("F1")%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Estado == "cancelada")
                {
                    <div class="alert alert-danger">
                        <h6><i class="bi bi-exclamation-triangle"></i> Contrato Cancelado</h6>
                        <p><strong>Motivo:</strong> @Model.MotivoCancelacion</p>
                        <p><strong>Fecha de cancelación:</strong> @Model.FechaCancelacion?.ToString("dd/MM/yyyy")</p>
                        <p class="mb-0">No se pueden realizar modificaciones en un contrato cancelado.</p>
                    </div>
                }
                else if (Model.Estado == "escriturada")
                {
                    <div class="alert alert-success">
                        <h6><i class="bi bi-check-circle"></i> Contrato Escriturado</h6>
                        <p><strong>Fecha de escrituración:</strong> @Model.FechaEscrituracion?.ToString("dd/MM/yyyy")</p>
                        <p class="mb-0">El contrato ya ha sido completado y escriturado. Las modificaciones están limitadas.</p>
                    </div>
                }

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdContratoVenta" />
                    <input type="hidden" asp-for="IdUsuarioCreador" />
                    <input type="hidden" asp-for="FechaCreacion" />

                    <!-- FILA 1: Información Básica (solo editable si no está cancelado/escriturado) -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-house"></i> Inmueble
                                </label>
                                <input type="text" class="form-control" value="@Model.Inmueble?.Direccion" readonly />
                                <small class="form-text text-muted">No se puede modificar el inmueble</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-person-badge"></i> Vendedor
                                </label>
                                <input type="text" class="form-control" 
                                       value="@Model.Vendedor?.Usuario?.Apellido, @Model.Vendedor?.Usuario?.Nombre" readonly />
                                <small class="form-text text-muted">No se puede modificar el vendedor</small>
                            </div>
                        </div>
                    </div>

                    <!-- FILA 2: Comprador y Precio -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Comprador
                                </label>
                                <input type="text" class="form-control" 
                                       value="@Model.Comprador?.Apellido, @Model.Comprador?.Nombre" readonly />
                                <small class="form-text text-muted">No se puede modificar el comprador</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PrecioTotal" class="form-label fw-bold">
                                    <i class="bi bi-currency-dollar"></i> Precio Total de Venta *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioTotal" type="number" step="0.01" min="1" class="form-control" 
                                           required readonly="@(Model.Estado == "cancelada" || Model.Estado == "escriturada")" />
                                </div>
                                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
                                @if (Model.Estado == "cancelada" || Model.Estado == "escriturada")
                                {
                                    <small class="form-text text-muted">No se puede modificar en el estado actual</small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- FILA 3: Fechas -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FechaInicio" class="form-label fw-bold">
                                    <i class="bi bi-calendar-check"></i> Fecha de Inicio *
                                </label>
                                <input asp-for="FechaInicio" type="date" class="form-control" required 
                                       readonly="@(Model.Estado == "cancelada" || Model.Estado == "escriturada")" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                @if (Model.Estado == "cancelada" || Model.Estado == "escriturada")
                                {
                                    <small class="form-text text-muted">No se puede modificar en el estado actual</small>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FechaEscrituracion" class="form-label fw-bold">
                                    <i class="bi bi-file-earmark-text"></i> Fecha de Escrituración
                                </label>
                                <input asp-for="FechaEscrituracion" type="date" class="form-control" 
                                       readonly="@(Model.Estado == "cancelada")" />
                                <span asp-validation-for="FechaEscrituracion" class="text-danger"></span>
                                @if (Model.Estado == "cancelada")
                                {
                                    <small class="form-text text-muted">No se puede modificar un contrato cancelado</small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- FILA 4: Montos de Pago -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="MontoSeña" class="form-label fw-bold">
                                    <i class="bi bi-cash-stack"></i> Seña Inicial
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="MontoSeña" type="number" step="0.01" min="0" class="form-control" 
                                           readonly="@(Model.Estado == "cancelada" || Model.Estado == "escriturada")" />
                                </div>
                                <span asp-validation-for="MontoSeña" class="text-danger"></span>
                                @if (Model.Estado == "cancelada" || Model.Estado == "escriturada")
                                {
                                    <small class="form-text text-muted">No se puede modificar en el estado actual</small>
                                }
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="MontoAnticipos" class="form-label fw-bold">
                                    <i class="bi bi-wallet2"></i> Anticipos Previstos
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="MontoAnticipos" type="number" step="0.01" min="0" class="form-control" 
                                           readonly="@(Model.Estado == "cancelada" || Model.Estado == "escriturada")" />
                                </div>
                                <span asp-validation-for="MontoAnticipos" class="text-danger"></span>
                                @if (Model.Estado == "cancelada" || Model.Estado == "escriturada")
                                {
                                    <small class="form-text text-muted">No se puede modificar en el estado actual</small>
                                }
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-cash"></i> Monto Total Pagado
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="text" class="form-control bg-light" value="@Model.MontoPagado.ToString("F2")" readonly />
                                </div>
                                <small class="form-text text-muted">Calculado automáticamente de los pagos registrados</small>
                            </div>
                        </div>
                    </div>

                    <!-- FILA 5: Observaciones -->
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <label asp-for="Observaciones" class="form-label fw-bold">
                                    <i class="bi bi-chat-text"></i> Observaciones
                                </label>
                                <textarea asp-for="Observaciones" class="form-control" rows="3" 
                                          placeholder="Condiciones especiales, acuerdos, detalles del pago..."
                                          readonly="@(Model.Estado == "cancelada")"></textarea>
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                                @if (Model.Estado == "cancelada")
                                {
                                    <small class="form-text text-muted">No se puede modificar un contrato cancelado</small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Resumen de la operación -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title"><i class="bi bi-calculator"></i> Resumen de la Operación</h6>
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>Precio Total:</strong>
                                    <span id="resumenPrecioTotal" class="text-success fw-bold">$@Model.PrecioTotal.ToString("F2")</span>
                                </div>
                                <div class="col-md-3">
                                    <strong>Seña:</strong>
                                    <span id="resumenSena" class="text-info">$@Model.MontoSeña.ToString("F2")</span>
                                    <small id="resumenPorcentajeSena" class="text-muted">
                                        (@((Model.PrecioTotal > 0 ? (Model.MontoSeña / Model.PrecioTotal) * 100 : 0).ToString("F1"))%)
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <strong>Pagado:</strong>
                                    <span class="text-primary fw-bold">$@Model.MontoPagado.ToString("F2")</span>
                                    <small class="text-muted">(@Model.PorcentajePagado.ToString("F1")%)</small>
                                </div>
                                <div class="col-md-3">
                                    <strong>Saldo Pendiente:</strong>
                                    <span id="resumenSaldo" class="text-danger">$@Model.SaldoPendiente.ToString("F2")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de auditoría -->
                    <div class="card border-secondary mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="bi bi-clock-history"></i> Información de Auditoría</h6>
                        </div>
                        <div class="card-body">
                            <div class="row small">
                                <div class="col-md-4">
                                    <strong>Creado por:</strong><br>
                                    @Model.UsuarioCreador?.Apellido, @Model.UsuarioCreador?.Nombre
                                </div>
                                <div class="col-md-4">
                                    <strong>Fecha creación:</strong><br>
                                    @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                </div>
                                <div class="col-md-4">
                                    <strong>Última modificación:</strong><br>
                                    @Model.FechaModificacion.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                            @if (Model.Estado == "cancelada" && Model.UsuarioCancelador != null)
                            {
                                <hr>
                                <div class="row small">
                                    <div class="col-md-6">
                                        <strong>Cancelado por:</strong><br>
                                        @Model.UsuarioCancelador.Apellido, @Model.UsuarioCancelador.Nombre
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Fecha cancelación:</strong><br>
                                        @Model.FechaCancelacion?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-center">
                        @if (Model.Estado != "cancelada" && Model.Estado != "escriturada")
                        {
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Actualizar Contrato
                            </button>
                        }
                        
                        <a asp-controller="Contratos" asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        
                        @if (Model.Estado != "cancelada" && Model.Estado != "escriturada")
                        {
                            <a asp-action="Cancel" asp-route-id="@Model.IdContratoVenta" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar Contrato
                            </a>
                        }
                        
                        @if (Model.Estado == "pendiente_escritura")
                        {
                            <a asp-action="Escriturar" asp-route-id="@Model.IdContratoVenta" class="btn btn-success btn-lg">
                                <i class="bi bi-file-earmark-check"></i> Marcar como Escriturado
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar cálculos de montos en tiempo real
            const precioTotalInput = document.querySelector('input[name="PrecioTotal"]');
            const montoSenaInput = document.querySelector('input[name="MontoSeña"]');
            
            if (precioTotalInput && !precioTotalInput.readOnly) {
                precioTotalInput.addEventListener('input', actualizarResumen);
            }
            
            if (montoSenaInput && !montoSenaInput.readOnly) {
                montoSenaInput.addEventListener('input', actualizarResumen);
            }
            
            // Actualizar resumen de montos
            function actualizarResumen() {
                const precioTotal = parseFloat(precioTotalInput.value) || 0;
                const montoSena = parseFloat(montoSenaInput.value) || 0;
                const montoPagado = @Model.MontoPagado;
                const saldoPendiente = precioTotal - montoPagado;
                const porcentajeSena = precioTotal > 0 ? (montoSena / precioTotal) * 100 : 0;
                
                // Actualizar displays
                document.getElementById('resumenPrecioTotal').textContent = `$${precioTotal.toLocaleString('es-AR', { minimumFractionDigits: 2 })}`;
                document.getElementById('resumenSena').textContent = `$${montoSena.toLocaleString('es-AR', { minimumFractionDigits: 2 })}`;
                document.getElementById('resumenPorcentajeSena').textContent = `(${porcentajeSena.toFixed(1)}%)`;
                document.getElementById('resumenSaldo').textContent = `$${saldoPendiente.toLocaleString('es-AR', { minimumFractionDigits: 2 })}`;
                
                // Validar que la seña no sea mayor al precio total
                if (montoSena > precioTotal) {
                    montoSenaInput.setCustomValidity('La seña no puede ser mayor al precio total');
                } else {
                    montoSenaInput.setCustomValidity('');
                }
            }
            
            // Configurar fecha mínima para escrituración (hoy o posterior)
            const fechaEscrituracion = document.querySelector('input[name="FechaEscrituracion"]');
            if (fechaEscrituracion && !fechaEscrituracion.readOnly) {
                const hoy = new Date().toISOString().split('T')[0];
                fechaEscrituracion.min = hoy;
            }
            
            // Confirmación antes de enviar el formulario
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const precioTotal = parseFloat(precioTotalInput.value) || 0;
                    const montoSena = parseFloat(montoSenaInput.value) || 0;
                    
                    if (montoSena > precioTotal) {
                        e.preventDefault();
                        alert('Error: La seña no puede ser mayor al precio total');
                        return;
                    }
                    
                    if (!confirm('¿Está seguro que desea guardar los cambios en el contrato de venta?')) {
                        e.preventDefault();
                    }
                });
            }
            
            // Confirmación para cancelar contrato
            const cancelBtn = document.querySelector('a[href*="Cancel"]');
            if (cancelBtn) {
                cancelBtn.addEventListener('click', function(e) {
                    if (!confirm('¿Está seguro que desea cancelar este contrato de venta? Esta acción no se puede deshacer.')) {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>
    
    <style>
        .card-header {
            border-bottom: 3px solid rgba(255, 193, 7, 0.3);
        }
        
        .form-label.fw-bold {
            color: #495057;
            margin-bottom: 0.5rem;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #ced4da;
        }
        
        input:read-only, textarea:read-only {
            background-color: #e9ecef;
            opacity: 0.7;
        }
        
        .bg-warning {
            background-color: #ffc107 !important;
        }
        
        .progress {
            height: 8px;
        }
        
        .badge {
            font-size: 0.8rem;
            font-weight: 500;
        }
    </style>
}