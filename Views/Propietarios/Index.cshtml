@model IEnumerable<Inmobiliaria_troncoso_leandro.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}

<div class="row justify-content-between align-items-center mb-4">
    <div class="col-md-6">
        <h2>游 Gesti칩n de Propietarios</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Propietario
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <strong>Error:</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <strong>칄xito:</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Formulario de b칰squeda -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="buscar" class="form-label">Buscar Propietario</label>
                    <input type="text" 
                           id="buscar" 
                           name="buscar" 
                           class="form-control" 
                           placeholder="Nombre, apellido, DNI, email..."
                           value="@ViewBag.Buscar">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </a>
                </div>
                <div class="col-md-2 text-end">
                    <small class="text-muted d-block mb-2">
                        Total: @ViewBag.TotalRegistros propietarios
                    </small>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Filtros de estado -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="btn-group" role="group" aria-label="Filtros de estado">
        <a asp-action="Index" 
           asp-route-estado="activos" 
           asp-route-buscar="@ViewBag.Buscar"
           class="btn btn-outline-success @(ViewBag.EstadoFiltro == "activos" ? "active" : "")">
            <i class="bi bi-check-circle"></i> Activos
        </a>
        <a asp-action="Index" 
           asp-route-estado="inactivos" 
           asp-route-buscar="@ViewBag.Buscar"
           class="btn btn-outline-danger @(ViewBag.EstadoFiltro == "inactivos" ? "active" : "")">
            <i class="bi bi-x-circle"></i> Inactivos
        </a>
        <a asp-action="Index" 
           asp-route-estado="todos" 
           asp-route-buscar="@ViewBag.Buscar"
           class="btn btn-outline-primary @(ViewBag.EstadoFiltro == "todos" ? "active" : "")">
            <i class="bi bi-list"></i> Todos
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-house" style="font-size: 4rem; color: #6c757d;"></i>
        <h4 class="text-muted mt-3">No hay propietarios</h4>
        <p class="text-muted">
            @if (!string.IsNullOrEmpty(ViewBag.Buscar))
            {
                <span>No se encontraron propietarios con los criterios de b칰squeda.</span>
            }
            else
            {
                <span>Comienza creando tu primer propietario.</span>
            }
        </p>
        <a asp-action="Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle"></i> Crear Primer Propietario
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 7%;">C칩digo</th>
                    <th style="width: 18%;">Nombre Completo</th>
                    <th style="width: 10%;">DNI</th>
                    <th style="width: 18%;">Direcci칩n</th>
                    <th style="width: 12%;">Tel칠fono</th>
                    <th style="width: 15%;">Email</th>
                    <th style="width: 10%;">Estado</th>
                    <th style="width: 10%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(!item.Estado ? "table-secondary" : "")">
                        <td>
                            <span class="badge bg-secondary">#@item.IdPropietario</span>
                        </td>
                        <td>
                            <strong>@item.Usuario?.Apellido, @item.Usuario?.Nombre</strong>
                        </td>
                        <td>@(item.Usuario?.Dni ?? "N/A")</td>
                        <td>@(item.Usuario?.Direccion ?? "N/A")</td>
                        <td>@(item.Usuario?.Telefono ?? "N/A")</td>
                        <td>@(item.Usuario?.Email ?? "N/A")</td>
                        <td>
                            @if (item.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Inactivo
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdPropietario" 
                                   class="btn btn-warning btn-sm" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
        
                                @* Bot칩n de Toggle Estado *@
                                <form asp-action="ToggleEstado" asp-route-id="@item.IdPropietario" 
                                      method="post" style="display:inline;">
                                    @if (item.Estado)
                                    {
                                        <button type="submit" class="btn btn-secondary btn-sm" 
                                                title="Desactivar"
                                                onclick="return confirm('쮻esactivar este propietario?');">
                                            <i class="bi bi-pause-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" 
                                                title="Activar"
                                                onclick="return confirm('쮸ctivar este propietario?');">
                                            <i class="bi bi-play-circle"></i>
                                        </button>
                                    }
                                </form>
        
                                <a asp-action="Delete" asp-route-id="@item.IdPropietario" 
                                   class="btn btn-danger btn-sm" title="Ver Detalles">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginaci칩n -->
    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginaci칩n de propietarios">
            <ul class="pagination justify-content-center">
                <!-- P치gina anterior -->
                @if (ViewBag.PaginaActual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pagina="@(ViewBag.PaginaActual - 1)"
                           asp-route-buscar="@ViewBag.Buscar"
                           asp-route-estado="@ViewBag.EstadoFiltro">
                            Anterior
                        </a>
                    </li>
                }

                <!-- P치ginas num칠ricas -->
                @{
                    int inicioRango = Math.Max(1, ViewBag.PaginaActual - 2);
                    int finRango = Math.Min(ViewBag.TotalPaginas, ViewBag.PaginaActual + 2);
                }

                @if (inicioRango > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pagina="1"
                           asp-route-buscar="@ViewBag.Buscar" 
                           asp-route-estado="@ViewBag.EstadoFiltro">1</a>
                    </li>
                    @if (inicioRango > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (int i = inicioRango; i <= finRango; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pagina="@i"
                           asp-route-buscar="@ViewBag.Buscar"
                           asp-route-estado="@ViewBag.EstadoFiltro">@i</a>
                    </li>
                }

                @if (finRango < ViewBag.TotalPaginas)
                {
                    @if (finRango < ViewBag.TotalPaginas - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pagina="@ViewBag.TotalPaginas"
                           asp-route-buscar="@ViewBag.Buscar"
                           asp-route-estado="@ViewBag.EstadoFiltro">@ViewBag.TotalPaginas</a>
                    </li>
                }

                <!-- P치gina siguiente -->
                @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pagina="@(ViewBag.PaginaActual + 1)"
                           asp-route-buscar="@ViewBag.Buscar"
                           asp-route-estado="@ViewBag.EstadoFiltro">
                            Siguiente
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <!-- Informaci칩n de paginaci칩n -->
        <div class="text-center text-muted mt-3">
            <small>
                Mostrando @((ViewBag.PaginaActual - 1) * ViewBag.ITEMS_POR_PAGINA + 1) - 
                @(Math.Min(ViewBag.PaginaActual * ViewBag.ITEMS_POR_PAGINA, ViewBag.TotalRegistros)) 
                de @ViewBag.TotalRegistros propietarios
            </small>
        </div>
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus en el campo de b칰squeda si est치 vac칤o
            const buscarInput = document.getElementById('buscar');
            if (buscarInput && !buscarInput.value) {
                buscarInput.focus();
            }
        });
    </script>
}