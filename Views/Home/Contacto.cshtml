@model Inmobiliaria_troncoso_leandro.Models.Contacto
@{
    ViewData["Title"] = "Habla con un Asesor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-headset me-2"></i>
                        Habla con un Asesor
                    </h3>
                    <p class="mb-0 mt-2">Completa el formulario y nos pondremos en contacto contigo</p>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* Formulario de contacto *@
                    <form asp-action="Index" method="post" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">
                                    <i class="bi bi-person me-1"></i>Nombre *
                                </label>
                                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label">
                                    <i class="bi bi-person me-1"></i>Apellido *
                                </label>
                                <input asp-for="Apellido" class="form-control" placeholder="Tu apellido" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email *
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label">
                                    <i class="bi bi-telephone me-1"></i>Teléfono
                                </label>
                                <input asp-for="Telefono" class="form-control" placeholder="Tu número de teléfono" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Asunto" class="form-label">
                                <i class="bi bi-tag me-1"></i>Asunto
                            </label>
                            <input asp-for="Asunto" class="form-control" placeholder="¿En qué te podemos ayudar?" />
                            <span asp-validation-for="Asunto" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Mensaje" class="form-label">
                                <i class="bi bi-chat-text me-1"></i>Mensaje *
                            </label>
                            <textarea asp-for="Mensaje" class="form-control" rows="5" 
                                placeholder="Cuéntanos qué necesitas, qué tipo de propiedad buscas, tu presupuesto, etc."></textarea>
                            <span asp-validation-for="Mensaje" class="text-danger"></span>
                        </div>

                        @* Campo oculto para ID de inmueble si viene de una propiedad específica *@
                        <input asp-for="IdInmueble" type="hidden" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-send me-2"></i>Enviar Mensaje
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información de contacto adicional -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-telephone-fill fs-1 text-primary mb-3"></i>
                            <h5>Teléfono</h5>
                            <p class="mb-0">+54 2664 123456</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-envelope-fill fs-1 text-primary mb-3"></i>
                            <h5>Email</h5>
                            <p class="mb-0">contacto@inmobiliaria.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-geo-alt-fill fs-1 text-primary mb-3"></i>
                            <h5>Ubicación</h5>
                            <p class="mb-0">Villa Mercedes, San Luis</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Validación en tiempo real
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const inputs = form.querySelectorAll('input, textarea');
            
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                });
            });
            
            function validateField(field) {
                const value = field.value.trim();
                const isRequired = field.hasAttribute('data-val-required');
                
                // Remover clases previas
                field.classList.remove('is-valid', 'is-invalid');
                
                if (isRequired && !value) {
                    field.classList.add('is-invalid');
                } else if (value) {
                    // Validación específica por tipo
                    if (field.type === 'email') {
                        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                        if (emailRegex.test(value)) {
                            field.classList.ad
                            d('is-valid');
                        } else {
                            field.classList.add('is-invalid');
                        }
                    } else {
                        field.classList.add('is-valid');
                    }
                }
            }
        });
    </script>
}