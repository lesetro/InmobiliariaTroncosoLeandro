@model Inmobiliaria_troncoso_leandro.Models.Inmueble

@{
    ViewData["Title"] = "Crear Inmueble";
    var propietarios = ViewBag.Propietarios as IList<Inmobiliaria_troncoso_leandro.Models.Propietario>;
    var tiposInmueble = ViewBag.TiposInmueble as IList<Inmobiliaria_troncoso_leandro.Models.TipoInmueble>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h3">Crear Nuevo Inmueble</h1>
                <a asp-action="Inmuebles" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Inmuebles
                </a>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-home text-warning"></i> Información del Inmueble
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CrearInmueble" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Información Básica -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Información Básica</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="Direccion" class="form-label">Dirección *</label>
                                    <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección completa" required />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Uso" class="form-label">Uso *</label>
                                    <select asp-for="Uso" class="form-select" required>
                                        <option value="">Seleccione el uso</option>
                                        <option value="residencial">Residencial</option>
                                        <option value="comercial">Comercial</option>
                                        <option value="industrial">Industrial</option>
                                        <option value="mixto">Mixto</option>
                                    </select>
                                    <span asp-validation-for="Uso" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdTipoInmueble" class="form-label">Tipo de Inmueble *</label>
                                    <select asp-for="IdTipoInmueble" class="form-select" required>
                                        <option value="">Seleccione el tipo</option>
                                        @if (tiposInmueble != null)
                                        {
                                            @foreach (var tipo in tiposInmueble)
                                            {
                                                <option value="@tipo.IdTipoInmueble">@tipo.Nombre</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdTipoInmueble" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdPropietario" class="form-label">Propietario *</label>
                                    <select asp-for="IdPropietario" class="form-select" required>
                                        <option value="">Seleccione el propietario</option>
                                        @if (propietarios != null)
                                        {
                                            @foreach (var propietario in propietarios)
                                            {
                                                <option value="@propietario.Usuario.IdUsuario">
                                                    @propietario.Usuario.NombreCompleto - @propietario.Usuario.Email
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdPropietario" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Detalles del Inmueble -->
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Detalles del Inmueble</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="Ambientes" class="form-label">Cantidad de Ambientes *</label>
                                    <input asp-for="Ambientes" type="number" min="1" class="form-control" placeholder="Número de ambientes" required />
                                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label">Precio *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Coordenadas" class="form-label">Coordenadas</label>
                                    <input asp-for="Coordenadas" class="form-control" placeholder="Latitud,Longitud (ej: -33.123,-68.456)" />
                                    <div class="form-text">Formato: latitud,longitud</div>
                                    <span asp-validation-for="Coordenadas" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="archivoPortada" class="form-label">Imagen de Portada</label>
                                    <input type="file" name="archivoPortada" id="archivoPortada" class="form-control" accept="image/*" />
                                    <div class="form-text">Formatos permitidos: JPG, PNG, GIF. Máximo 5MB.</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">Estado</label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="disponible" selected>Disponible</option>
                                        <option value="alquilado">Alquilado</option>
                                        <option value="vendido">Vendido</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <a asp-action="Inmuebles" class="btn btn-secondary me-2">Cancelar</a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-save"></i> Crear Inmueble
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}