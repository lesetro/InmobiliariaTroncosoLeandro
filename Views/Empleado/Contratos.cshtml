@model IList<Inmobiliaria_troncoso_leandro.Models.Contrato>

@{
    ViewData["Title"] = "Gestión de Contratos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h3">Gestión de Contratos</h1>
                <a asp-action="CrearContrato" class="btn btn-info">
                    <i class="fas fa-plus"></i> Crear Contrato
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filtros -->
            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" asp-action="Contratos">
                        <div class="row g-3">
                            <div class="col-md-5">
                                <label class="form-label">Buscar</label>
                                <input type="text" name="buscar" value="@ViewBag.Buscar" class="form-control" placeholder="Dirección o inquilino..." />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Estado</label>
                                <select name="estado" class="form-select">
                                    <option value="">Todos los estados</option>
                                    <option value="vigente" selected="@(ViewBag.EstadoSeleccionado == "vigente")">Vigente</option>
                                    <option value="vencido" selected="@(ViewBag.EstadoSeleccionado == "vencido")">Vencido</option>
                                    <option value="cancelado" selected="@(ViewBag.EstadoSeleccionado == "cancelado")">Cancelado</option>
                                </select>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search"></i> Buscar
                                </button>
                                <a asp-action="Contratos" class="btn btn-outline-secondary">Limpiar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tabla -->
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Monto Mensual</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contrato in Model)
                                    {
                                        <tr>
                                            <td><strong>#@contrato.IdContrato</strong></td>
                                            <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                            <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                                            <td>$@contrato.MontoMensual.ToString("N0")</td>
                                            <td>
                                                @{
                                                    var badgeClass = contrato.Estado switch
                                                    {
                                                        "vigente" => "bg-success",
                                                        "vencido" => "bg-danger",
                                                        "cancelado" => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@contrato.Estado.ToUpper()</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron contratos</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>