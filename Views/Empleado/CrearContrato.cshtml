@model Inmobiliaria_troncoso_leandro.Models.Contrato

@{
    ViewData["Title"] = "Crear Contrato";
    var inmuebles = ViewBag.InmueblesDisponibles as IList<Inmobiliaria_troncoso_leandro.Models.Inmueble>;
    var inquilinos = ViewBag.Inquilinos as IList<Inmobiliaria_troncoso_leandro.Models.Inquilino>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h3">Crear Nuevo Contrato</h1>
                <a asp-action="Contratos" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Contratos
                </a>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-contract text-info"></i> Información del Contrato
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CrearContrato" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Selección de Inmueble e Inquilino</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="IdInmueble" class="form-label">Inmueble *</label>
                                    <select asp-for="IdInmueble" class="form-select" required>
                                        <option value="">Seleccione un inmueble</option>
                                        @if (inmuebles != null)
                                        {
                                            @foreach (var inmueble in inmuebles)
                                            {
                                                <option value="@inmueble.IdInmueble">
                                                    @inmueble.Direccion - $@inmueble.Precio.ToString("N0")
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdInmueble" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdInquilino" class="form-label">Inquilino *</label>
                                    <select asp-for="IdInquilino" class="form-select" required>
                                        <option value="">Seleccione un inquilino</option>
                                        @if (inquilinos != null)
                                        {
                                            @foreach (var inquilino in inquilinos)
                                            {
                                                <option value="@inquilino.Usuario.IdUsuario">
                                                    @inquilino.Usuario.NombreCompleto - @inquilino.Usuario.Email
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="IdInquilino" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Detalles del Contrato</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="FechaInicio" class="form-label">Fecha de Inicio *</label>
                                    <input asp-for="FechaInicio" type="date" class="form-control" required />
                                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FechaFin" class="form-label">Fecha de Fin *</label>
                                    <input asp-for="FechaFin" type="date" class="form-control" required />
                                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MontoMensual" class="form-label">Monto Mensual *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="MontoMensual" type="number" step="0.01" min="0" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="MontoMensual" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">Estado</label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="vigente" selected>Vigente</option>
                                        <option value="pendiente">Pendiente</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <a asp-action="Contratos" class="btn btn-secondary me-2">Cancelar</a>
                                    <button type="submit" class="btn btn-info">
                                        <i class="fas fa-save"></i> Crear Contrato
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}