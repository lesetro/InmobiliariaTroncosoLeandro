@model Inmobiliaria_troncoso_leandro.Data.Interfaces.EmpleadoDashboardDto

@{
    ViewData["Title"] = "Dashboard Empleado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-3">Panel Empleado</h1>
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Tarjeta Usuarios -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@Model.TotalUsuarios</h4>
                                    <p class="mb-0">Usuarios</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" asp-action="Usuarios">Ver Detalles</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta Inmuebles -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@Model.TotalInmuebles</h4>
                                    <p class="mb-0">Inmuebles</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-home fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" asp-action="Inmuebles">Ver Detalles</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta Contratos -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@Model.TotalContratos</h4>
                                    <p class="mb-0">Contratos</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-file-contract fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" asp-action="Contratos">Ver Detalles</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta Intereses -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@Model.TotalIntereses</h4>
                                    <p class="mb-0">Intereses</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-heart fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" asp-action="Intereses">Ver Detalles</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones Rápidas -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Acciones Rápidas</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <a asp-action="CrearPropietario" class="btn btn-primary w-100">
                                        <i class="fas fa-user-plus me-2"></i>Crear Propietario
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a asp-action="CrearInquilino" class="btn btn-success w-100">
                                        <i class="fas fa-user-plus me-2"></i>Crear Inquilino
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a asp-action="CrearInmueble" class="btn btn-warning w-100">
                                        <i class="fas fa-plus me-2"></i>Crear Inmueble
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a asp-action="CrearContrato" class="btn btn-info w-100">
                                        <i class="fas fa-file-plus me-2"></i>Crear Contrato
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>