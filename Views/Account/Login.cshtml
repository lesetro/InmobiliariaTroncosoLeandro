@section Scripts {
    <script>
        $(document).ready(function() {
            // Mostrar/ocultar contraseña
            $('#togglePassword').click(function() {
                const passwordInput = $('#password');
                const toggleIcon = $('#toggleIcon');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    toggleIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    toggleIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Validación del formulario
            $('#loginForm').submit(function(e) {
                const email = $('#email').val();
                const password = $('#password').val();
                
                if (!email || !password) {
                    e.preventDefault();
                    showAlert('danger', 'Por favor complete todos los campos requeridos.');
                    return false;
                }
                
                
                
                // Mostrar loading
                $('#loginButton').html('<i class="fas fa-spinner fa-spin"></i> Iniciando sesión...').prop('disabled', true);
            });

            // Animaciones de entrada
            $('.card').addClass('animated fadeInUp');
            
            // Focus automático en el campo email
            $('#email').focus();
        });

        function fillCredentials(email, password) {
            $('#email').val(email);
            $('#password').val(password);
            $('#testUsersModal').modal('hide');
            $('#password').focus();
        }

      
        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'danger' ? 'exclamation-triangle' : 'info-circle'}"></i>
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `;
            
            $('.alert').remove();
            $('#loginForm').prepend(alertHtml);
        }
        // Agregar al final del $(document).ready
        $('#testUsersModalBtn').click(function() {
        $('#testUsersModal').modal('show');
        });
    </script>
}

