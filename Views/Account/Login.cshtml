                                        </h2>
                                        <p class="lead mb-4">Sistema de Gestión Inmobiliaria</p>
                                        <div class="feature-list text-left">
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-home fa-fw mr-2"></i>
                                                Gestión de Propiedades
                                            </div>
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-users fa-fw mr-2"></i>
                                                Administración de Usuarios
                                            </div>
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-file-contract fa-fw mr-2"></i>
                                                Control de Contratos
                                            </div>
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-dollar-sign fa-fw mr-2"></i>
                                                Seguimiento de Pagos
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Formulario de login -->
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenido </h1>
                                </div>
                                
                                <!-- Mostrar errores -->
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <div>@error.ErrorMessage</div>
                                        }
                                    </div>
                                }

                                <!-- Mostrar mensajes de TempData -->
                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        @TempData["Error"]
                                    </div>
                                }

                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        <i class="fas fa-check-circle"></i>
                                        @TempData["Success"]
                                    </div>
                                }

                                @if (TempData["Info"] != null)
                                {
                                    <div class="alert alert-info" role="alert">
                                        <i class="fas fa-info-circle"></i>
                                        @TempData["Info"]
                                    </div>
                                }

                                <form method="post" asp-action="Login" id="loginForm">
                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl "" />
                                    
                                    <div class="form-group">
                                        <label for="email" class="form-label font-weight-bold">Email</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="fas fa-envelope text-gray-500"></i>
                                                </div>
                                            </div>
                                            <input type="email" 
                                                   class="form-control form-control-user" 
                                                   id="email" 
                                                   name="email"
                                                   placeholder="Ingrese su email..."
                                                   required
                                                   autocomplete="email">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="password" class="form-label font-weight-bold">Contraseña</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="fas fa-lock text-gray-500"></i>
                                                </div>
                                            </div>
                                            <input type="password" 
                                                   class="form-control form-control-user" 
                                                   id="password" 
                                                   name="password"
                                                   placeholder="Contraseña"
                                                   required
                                                   autocomplete="current-password">
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column align-items-center">
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="rememberMe" name="rememberMe">
                                                <label class="custom-control-label" for="rememberMe">Recordarme</label>
                                            </div>
                                        </div>
    
                                        <button type="submit" class="btn btn-primary btn-user btn-block" id="loginButton">
                                            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                                        </button>
                                    </div>
                                    <hr>
                                    
                                    <!-- Usuarios de prueba -->
                                    <div class="text-center">
                                       <button type="button" class="btn btn-link btn-sm" data-toggle="modal" data-target="#testUsersModal">
                                            <i class="fas fa-info-circle"></i> Usuarios de Pruebas
                                    </button>
                                    </div>
                                </form>
                                
                                <hr>
                                
                                <div class="text-center">
                                    <a class="small" href="#" data-toggle="modal" data-target="#forgotPasswordModal">
                                        ¿Olvidaste tu contraseña?
                                    </a>
                                </div>
                                
                                <div class="text-center">
                                    <a class="small" asp-action="Index" asp-controller="Home">
                                        <i class="fas fa-arrow-left"></i> Volver al sitio público
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

