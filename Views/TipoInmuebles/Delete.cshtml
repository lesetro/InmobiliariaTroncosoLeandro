@model Inmobiliaria_troncoso_leandro.Models.TipoInmueble

@{
    ViewData["Title"] = "Eliminar Tipo de Inmueble";
    var inmueblesAsociados = ViewBag.InmueblesAsociados ?? 0;
}

<div class="container">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-building me-1"></i>
                            Tipos de Inmueble
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
                </ol>
            </nav>
            
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                        Confirmar Eliminación
                    </h2>
                    <p class="text-muted mb-0">¿Estás seguro de que deseas eliminar este tipo de inmueble?</p>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.IdTipoInmueble" class="btn btn-outline-info me-2">
                        <i class="fas fa-eye me-1"></i>
                        Ver Detalles
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (inmueblesAsociados > 0)
            {
                <!-- No se puede eliminar -->
                <div class="card border-danger shadow">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-ban me-2"></i>
                            No se puede eliminar
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Operación no permitida
                            </h6>
                            <p class="mb-0">
                                No puedes eliminar este tipo de inmueble porque tiene 
                                <strong>@inmueblesAsociados</strong> inmueble@(inmueblesAsociados != 1 ? "s" : "") asociado@(inmueblesAsociados != 1 ? "s" : "").
                            </p>
                        </div>

                        <!-- Información del tipo -->
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Información del Tipo
                                </h6>
                                <ul class="list-unstyled">
                                    <li><strong>ID:</strong> #@Model.IdTipoInmueble</li>
                                    <li><strong>Nombre:</strong> @Model.Nombre</li>
                                    <li><strong>Estado:</strong> 
                                        @if (Model.Estado)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </li>
                                    <li><strong>Creado:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-warning">
                                    <i class="fas fa-home me-1"></i>
                                    Inmuebles Asociados
                                </h6>
                                <div class="text-center">
                                    <div class="display-6 text-warning">@inmueblesAsociados</div>
                                    <small class="text-muted">inmueble@(inmueblesAsociados != 1 ? "s" : "") registrado@(inmueblesAsociados != 1 ? "s" : "")</small>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-lightbulb me-1"></i>
                                Alternativas disponibles
                            </h6>
                            <ul class="mb-0">
                                <li><strong>Desactivar:</strong> Puedes desactivar el tipo para que no aparezca en nuevos inmuebles</li>
                                <li><strong>Reasignar:</strong> Cambia el tipo de los inmuebles existentes a otro tipo</li>
                                <li><strong>Esperar:</strong> Elimina o modifica primero los inmuebles asociados</li>
                            </ul>
                        </div>

                        <!-- Acciones alternativas -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Inmuebles" asp-action="Index" asp-route-tipoInmueble="@Model.IdTipoInmueble" 
                               class="btn btn-info me-md-2">
                                <i class="fas fa-eye me-1"></i>
                                Ver Inmuebles Asociados
                            </a>
                            @if (Model.Estado)
                            {
                                <button type="button" class="btn btn-warning me-md-2" 
                                        onclick="cambiarEstado(@Model.IdTipoInmueble, true)">
                                    <i class="fas fa-toggle-off me-1"></i>
                                    Desactivar Tipo
                                </button>
                            }
                            <a asp-action="Edit" asp-route-id="@Model.IdTipoInmueble" class="btn btn-primary me-md-2">
                                <i class="fas fa-edit me-1"></i>
                                Editar
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Se puede eliminar -->
                <div class="card border-warning shadow">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-trash me-2"></i>
                            Confirmar Eliminación
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                ¡Atención! Esta acción no se puede deshacer
                            </h6>
                            <p class="mb-0">
                                Estás a punto de eliminar permanentemente el tipo de inmueble 
                                <strong>"@Model.Nombre"</strong>.
                            </p>
                        </div>

                        <!-- Información del tipo -->
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title text-primary">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Datos del Tipo de Inmueble
                                </h6>
                                <div class="row">
                                    <div class="col-sm-3"><strong>ID:</strong></div>
                                    <div class="col-sm-9">#@Model.IdTipoInmueble</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"><strong>Nombre:</strong></div>
                                    <div class="col-sm-9">@Model.Nombre</div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    <div class="row">
                                        <div class="col-sm-3"><strong>Descripción:</strong></div>
                                        <div class="col-sm-9">@Model.Descripcion</div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-sm-3"><strong>Estado:</strong></div>
                                    <div class="col-sm-9">
                                        @if (Model.Estado)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"><strong>Fecha Creación:</strong></div>
                                    <div class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle me-1"></i>
                            <strong>Todo listo para eliminar:</strong> Este tipo no tiene inmuebles asociados.
                        </div>

                        <!-- Formulario de confirmación -->
                        <form asp-action="Delete" method="post" class="mt-4">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.IdTipoInmueble)
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-secondary me-md-2">
                                    <i class="fas fa-times me-1"></i>
                                    Cancelar
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.IdTipoInmueble" class="btn btn-info me-md-2">
                                    <i class="fas fa-eye me-1"></i>
                                    Ver Detalles
                                </a>
                                <button type="submit" class="btn btn-danger" onclick="return confirmarEliminacion()">
                                    <i class="fas fa-trash me-1"></i>
                                    Eliminar Definitivamente
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminacion() {
            return confirm('¿Estás COMPLETAMENTE seguro de eliminar el tipo de inmueble "@Model.Nombre"?\n\nEsta acción NO se puede deshacer.');
        }

        function cambiarEstado(id, estadoActual) {
            const accion = estadoActual ? 'desactivar' : 'activar';
            const mensaje = `¿Estás seguro de ${accion} este tipo de inmueble?`;
            
            if (confirm(mensaje)) {
                fetch('@Url.Action("CambiarEstado", "TipoInmuebles")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al cambiar el estado');
                });
            }
        }
    </script>
}

<style>
    .display-6 {
        font-size: 2.5rem;
        font-weight: 300;
        line-height: 1.2;
    }
</style>